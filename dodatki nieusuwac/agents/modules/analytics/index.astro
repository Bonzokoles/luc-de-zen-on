---
// üìä Agent 10 Analytics Prophet - ML-Powered Business Intelligence
import Layout from '../../../layouts/Layout.astro';
import { AGENT_CONFIG } from './config.js';
import AnalyticsProphetComponent from './component.svelte';

const agentInfo = {
  id: 'agent-10-analytics-prophet',
  name: 'Analytics Prophet',
  icon: 'üìä',
  description: 'ML-Powered Predictive Business Intelligence',
  version: '1.0.0',
  status: 'active',
  
  capabilities: [
    'Predictive Forecasting (Prophet, ARIMA, Neural Networks)',
    'Real-time Anomaly Detection',
    'Multi-touch Attribution Analysis',
    'ROI/ROAS Optimization',
    'Customer Cohort Analysis',
    'User Segmentation & Churn Prediction',
    'Customer Journey Analytics',
    'Automated Insights Generation',
    'Custom Report Creation',
    'Polish Market Optimization'
  ],
  
  integrations: [
    'Google Analytics 4',
    'Google Ads',
    'Facebook Ads',
    'Search Console',
    'E-commerce Platforms',
    'CRM Systems'
  ]
};

const mlModels = Object.keys(AGENT_CONFIG.mlModels.forecasting);
const dataSources = Object.keys(AGENT_CONFIG.dataSources);
const kpiCategories = Object.keys(AGENT_CONFIG.kpiTargets);
---

<Layout 
  title="Agent 10: Analytics Prophet"
  theme="cyberpunk"
>
  <main class="min-h-screen p-6" style="background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);">
    
    <!-- Hero Section -->
    <div class="max-w-7xl mx-auto">
      
      <!-- Agent Header -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-32 h-32 rounded-full bg-gradient-to-r from-cyan-500/20 to-blue-500/20 border-2 border-cyan-400/50 mb-6">
          <span class="text-6xl animate-pulse">{agentInfo.icon}</span>
        </div>
        
        <h1 class="text-5xl font-bold mb-4">
          <span class="bg-gradient-to-r from-cyan-300 via-blue-300 to-purple-300 bg-clip-text text-transparent">
            {agentInfo.name}
          </span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-6 max-w-3xl mx-auto">
          {agentInfo.description}
        </p>
        
        <div class="flex items-center justify-center space-x-6 text-sm">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
            <span class="text-green-400 font-medium">Status: {agentInfo.status}</span>
          </div>
          <div class="text-gray-400">Version: {agentInfo.version}</div>
          <div class="text-gray-400">ID: {agentInfo.id}</div>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-4 gap-6 mb-12">
        <div class="bg-gradient-to-br from-cyan-500/10 to-blue-500/10 p-6 rounded-xl border border-cyan-500/30">
          <div class="text-center">
            <div class="text-3xl font-bold text-cyan-300 mb-2">{mlModels.length}</div>
            <div class="text-sm text-gray-400">ML Models</div>
            <div class="text-xs text-cyan-400 mt-1">Prophet, ARIMA, Neural Net</div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-purple-500/10 to-pink-500/10 p-6 rounded-xl border border-purple-500/30">
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-300 mb-2">{dataSources.length}</div>
            <div class="text-sm text-gray-400">Data Sources</div>
            <div class="text-xs text-purple-400 mt-1">GA4, Ads, Social</div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-green-500/10 to-emerald-500/10 p-6 rounded-xl border border-green-500/30">
          <div class="text-center">
            <div class="text-3xl font-bold text-green-300 mb-2">{kpiCategories.length}</div>
            <div class="text-sm text-gray-400">KPI Categories</div>
            <div class="text-xs text-green-400 mt-1">Traffic, Revenue, Marketing</div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-orange-500/10 to-red-500/10 p-6 rounded-xl border border-orange-500/30">
          <div class="text-center">
            <div class="text-3xl font-bold text-orange-300 mb-2">10+</div>
            <div class="text-sm text-gray-400">Analytics Modules</div>
            <div class="text-xs text-orange-400 mt-1">Forecasting, Attribution, Churn</div>
          </div>
        </div>
      </div>

      <!-- Agent Capabilities -->
      <div class="grid grid-cols-2 gap-8 mb-12">
        
        <!-- Core Features -->
        <div class="space-y-6">
          <h2 class="text-2xl font-semibold text-cyan-300 mb-4">üîÆ Core Capabilities</h2>
          
          <div class="space-y-4">
            {agentInfo.capabilities.map((capability, index) => (
              <div class="flex items-start space-x-3 p-3 rounded-lg bg-black/20 border border-cyan-500/20">
                <span class="text-cyan-400 text-sm font-bold w-6 h-6 flex items-center justify-center bg-cyan-500/20 rounded-full">
                  {index + 1}
                </span>
                <span class="text-gray-300 text-sm">{capability}</span>
              </div>
            ))}
          </div>
        </div>

        <!-- Technical Specifications -->
        <div class="space-y-6">
          <h2 class="text-2xl font-semibold text-cyan-300 mb-4">‚öôÔ∏è Technical Specifications</h2>
          
          <!-- ML Models -->
          <div class="p-4 rounded-lg bg-black/30 border border-purple-500/30">
            <h3 class="text-lg font-medium text-purple-300 mb-3">ü§ñ ML Models</h3>
            <div class="grid grid-cols-2 gap-2">
              {mlModels.map(model => (
                <div class="text-sm text-gray-300 flex items-center space-x-2">
                  <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                  <span>{model.charAt(0).toUpperCase() + model.slice(1).replace(/([A-Z])/g, ' $1')}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Data Sources -->
          <div class="p-4 rounded-lg bg-black/30 border border-blue-500/30">
            <h3 class="text-lg font-medium text-blue-300 mb-3">üìä Data Sources</h3>
            <div class="grid grid-cols-2 gap-2">
              {dataSources.map(source => (
                <div class="text-sm text-gray-300 flex items-center space-x-2">
                  <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                  <span>{source.charAt(0).toUpperCase() + source.slice(1).replace(/([A-Z])/g, ' $1')}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Polish Market Features -->
          <div class="p-4 rounded-lg bg-black/30 border border-green-500/30">
            <h3 class="text-lg font-medium text-green-300 mb-3">üáµüá± Polish Market Features</h3>
            <div class="space-y-2">
              <div class="text-sm text-gray-300">‚Ä¢ Holiday Calendar Integration</div>
              <div class="text-sm text-gray-300">‚Ä¢ Seasonal Pattern Analysis</div>
              <div class="text-sm text-gray-300">‚Ä¢ Payment Method Analytics (BLIK, Cards)</div>
              <div class="text-sm text-gray-300">‚Ä¢ Local Demographics Segmentation</div>
              <div class="text-sm text-gray-300">‚Ä¢ Currency & Timezone Handling</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Performance Thresholds -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold text-cyan-300 mb-6">üìà Performance Targets & Thresholds</h2>
        
        <div class="grid grid-cols-3 gap-6">
          <!-- Traffic Targets -->
          <div class="p-6 rounded-xl bg-gradient-to-br from-blue-500/5 to-cyan-500/5 border border-blue-500/30">
            <h3 class="text-lg font-medium text-blue-300 mb-4 flex items-center">
              <span class="mr-2">üåê</span>
              Traffic Targets
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-sm text-gray-400">Monthly Sessions:</span>
                <span class="text-blue-300 font-medium">{AGENT_CONFIG.kpiTargets.traffic.monthly_sessions.toLocaleString()}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-400">Monthly Users:</span>
                <span class="text-blue-300 font-medium">{AGENT_CONFIG.kpiTargets.traffic.monthly_users.toLocaleString()}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-400">Bounce Rate Max:</span>
                <span class="text-blue-300 font-medium">{(AGENT_CONFIG.kpiTargets.traffic.bounce_rate_max * 100).toFixed(1)}%</span>
              </div>
            </div>
          </div>

          <!-- Conversion Targets -->
          <div class="p-6 rounded-xl bg-gradient-to-br from-green-500/5 to-emerald-500/5 border border-green-500/30">
            <h3 class="text-lg font-medium text-green-300 mb-4 flex items-center">
              <span class="mr-2">üéØ</span>
              Conversion Targets
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-sm text-gray-400">Overall Rate Min:</span>
                <span class="text-green-300 font-medium">{(AGENT_CONFIG.kpiTargets.conversion.overall_rate_min * 100).toFixed(2)}%</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-400">E-commerce Min:</span>
                <span class="text-green-300 font-medium">{(AGENT_CONFIG.kpiTargets.conversion.ecommerce_rate_min * 100).toFixed(2)}%</span>
              </div>
            </div>
          </div>

          <!-- Revenue Targets -->
          <div class="p-6 rounded-xl bg-gradient-to-br from-purple-500/5 to-pink-500/5 border border-purple-500/30">
            <h3 class="text-lg font-medium text-purple-300 mb-4 flex items-center">
              <span class="mr-2">üí∞</span>
              Revenue Targets
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-sm text-gray-400">Monthly Target:</span>
                <span class="text-purple-300 font-medium">{AGENT_CONFIG.kpiTargets.revenue.monthly_target.toLocaleString()} PLN</span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-400">AOV Min:</span>
                <span class="text-purple-300 font-medium">{AGENT_CONFIG.kpiTargets.revenue.avg_order_value_min} PLN</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Interactive Component -->
      <div id="analytics-dashboard" class="mb-12">
        <h2 class="text-2xl font-semibold text-cyan-300 mb-6">üéõÔ∏è Interactive Analytics Dashboard</h2>
        <div class="w-full">
          <AnalyticsProphetComponent client:load />
        </div>
      </div>

      <!-- Integration Status -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold text-cyan-300 mb-6">üîó Integration Status</h2>
        
        <div class="grid grid-cols-2 gap-6">
          {agentInfo.integrations.map(integration => (
            <div class="flex items-center justify-between p-4 rounded-lg bg-black/20 border border-cyan-500/20">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                <span class="text-gray-300">{integration}</span>
              </div>
              <span class="text-xs text-green-400 bg-green-400/10 px-2 py-1 rounded">Connected</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Documentation Links -->
      <div class="text-center">
        <h2 class="text-2xl font-semibold text-cyan-300 mb-6">üìö Resources</h2>
        
        <div class="flex justify-center space-x-4">
          <a href="/docs/agents/agent-10-analytics-prophet" class="px-6 py-3 bg-cyan-500/20 text-cyan-300 rounded-lg border border-cyan-400/50 hover:bg-cyan-500/30 transition-all duration-300">
            üìñ Documentation
          </a>
          <a href="/api/agents/agent-10-analytics-prophet/api" class="px-6 py-3 bg-purple-500/20 text-purple-300 rounded-lg border border-purple-400/50 hover:bg-purple-500/30 transition-all duration-300">
            üîß API Reference
          </a>
          <a href="#analytics-dashboard" class="px-6 py-3 bg-green-500/20 text-green-300 rounded-lg border border-green-400/50 hover:bg-green-500/30 transition-all duration-300">
            üéõÔ∏è Open Dashboard
          </a>
        </div>
      </div>

    </div>
  </main>
</Layout>

<style>
  :global(body) {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  main {
    background-attachment: fixed;
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }
  
  .bg-gradient-to-r {
    background-image: linear-gradient(to right, var(--tw-gradient-stops));
  }
  
  .bg-gradient-to-br {
    background-image: linear-gradient(to bottom right, var(--tw-gradient-stops));
  }
  
  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }
  
  .border-glow {
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
  }
  
  .text-glow {
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  }
</style>