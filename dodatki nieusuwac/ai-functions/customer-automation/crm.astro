---
import MyBonzoLayout from "../../../layouts/MyBonzoLayout.astro";
import DecorativeLines from "../../../components/DecorativeLines.astro";
---

<MyBonzoLayout siteTitle="Integracja CRM - Customer Automation | KAROL LISSON">
  <DecorativeLines />

  <main class="min-h-svh relative z-10">
    <!-- Background Grid Pattern -->
    <div class="fixed inset-0 bg-[#0a0a0a]">
      <div class="absolute inset-0 bg-gradient-to-br from-cyan-900/20 via-black to-black"></div>
      <div class="cyber-grid absolute inset-0"></div>
    </div>

    <!-- Header Section -->
    <section class="relative z-20 border-b border-[#333333] pt-20">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-[#00ffff] mb-2 uppercase tracking-wider font-['Neuropol']">
              Integracja CRM
            </h1>
            <p class="text-[#a0a0a0] text-lg font-['Kenyan_Coffee']">
              Bezpo≈õrednia synchronizacja z najpopularniejszymi systemami CRM
            </p>
          </div>
          <div class="text-right text-sm text-[#a0a0a0] font-mono">
            <div class="mb-1">
              SYNC: <span class="text-[#00ffff]">REAL-TIME</span>
            </div>
            <div>UPTIME: <span class="text-[#ff6699]">99.98%</span></div>
          </div>
        </div>

        <!-- Navigation -->
        <div class="flex gap-4 mb-8">
          <a
            href="../"
            class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#00ffff] hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase tracking-wide text-sm"
          >
            ‚Üê Customer Automation
          </a>
          <a
            href="../qualification/"
            class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#e0e0e0] hover:text-[#00ffff] hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase tracking-wide text-sm"
          >
            Kwalifikacja
          </a>
          <a
            href="../responses/"
            class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#e0e0e0] hover:text-[#00ffff] hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase tracking-wide text-sm"
          >
            Auto-Odpowiedzi
          </a>
        </div>
      </div>
    </section>

    <!-- CRM Platforms -->
    <section class="relative z-20 py-12">
      <div class="max-w-6xl mx-auto px-4">
        <h3 class="text-[#00ffff] font-['Neuropol'] text-xl uppercase tracking-wide mb-8">
          üîó Obs≈Çugiwane Platformy CRM
        </h3>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          <!-- HubSpot -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h4 class="text-[#ff6699] font-['Neuropol'] text-lg uppercase">HubSpot</h4>
              <div class="w-3 h-3 bg-[#00ff00] rounded-full animate-pulse"></div>
            </div>
            <p class="text-[#a0a0a0] text-sm mb-4">Marketing Hub, Sales Hub, Service Hub</p>
            <div class="space-y-2">
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Contacts sync:</span>
                <span class="text-[#e0e0e0]">2-way</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Deals tracking:</span>
                <span class="text-[#e0e0e0]">Enabled</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Webhooks:</span>
                <span class="text-[#e0e0e0]">Active</span>
              </div>
            </div>
            <button class="mt-4 w-full bg-[#00ffff] text-[#0a0a0a] py-2 px-4 text-sm font-bold hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase">
              Konfiguruj
            </button>
          </div>

          <!-- Salesforce -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h4 class="text-[#ff6699] font-['Neuropol'] text-lg uppercase">Salesforce</h4>
              <div class="w-3 h-3 bg-[#00ff00] rounded-full animate-pulse"></div>
            </div>
            <p class="text-[#a0a0a0] text-sm mb-4">Sales Cloud, Marketing Cloud</p>
            <div class="space-y-2">
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Leads sync:</span>
                <span class="text-[#e0e0e0]">Real-time</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Opportunities:</span>
                <span class="text-[#e0e0e0]">Auto-create</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Custom fields:</span>
                <span class="text-[#e0e0e0]">Mapped</span>
              </div>
            </div>
            <button class="mt-4 w-full bg-[#00ffff] text-[#0a0a0a] py-2 px-4 text-sm font-bold hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase">
              Konfiguruj
            </button>
          </div>

          <!-- Pipedrive -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h4 class="text-[#ff6699] font-['Neuropol'] text-lg uppercase">Pipedrive</h4>
              <div class="w-3 h-3 bg-[#ffaa00] rounded-full animate-pulse"></div>
            </div>
            <p class="text-[#a0a0a0] text-sm mb-4">Pipeline management focused</p>
            <div class="space-y-2">
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Pipeline sync:</span>
                <span class="text-[#e0e0e0]">Enabled</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Activities:</span>
                <span class="text-[#e0e0e0]">Auto-log</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Notes sync:</span>
                <span class="text-[#ffaa00]">Pending</span>
              </div>
            </div>
            <button class="mt-4 w-full bg-[#ffaa00] text-[#0a0a0a] py-2 px-4 text-sm font-bold hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase">
              W≈ÇƒÖcz
            </button>
          </div>

          <!-- Freshworks CRM -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h4 class="text-[#ff6699] font-['Neuropol'] text-lg uppercase">Freshworks</h4>
              <div class="w-3 h-3 bg-[#888888] rounded-full"></div>
            </div>
            <p class="text-[#a0a0a0] text-sm mb-4">Customer engagement suite</p>
            <div class="space-y-2">
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Integration:</span>
                <span class="text-[#888888]">Not configured</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">API ready:</span>
                <span class="text-[#e0e0e0]">Yes</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Estimate:</span>
                <span class="text-[#e0e0e0]">2 hours</span>
              </div>
            </div>
            <button class="mt-4 w-full bg-[#111111] border border-[#333333] text-[#e0e0e0] py-2 px-4 text-sm font-bold hover:border-[#00ffff] hover:text-[#00ffff] transition-all duration-300 font-['Neuropol'] uppercase">
              Skonfiguruj
            </button>
          </div>

          <!-- Monday.com -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h4 class="text-[#ff6699] font-['Neuropol'] text-lg uppercase">Monday.com</h4>
              <div class="w-3 h-3 bg-[#888888] rounded-full"></div>
            </div>
            <p class="text-[#a0a0a0] text-sm mb-4">Work management platform</p>
            <div class="space-y-2">
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Boards sync:</span>
                <span class="text-[#888888]">Not active</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Items tracking:</span>
                <span class="text-[#888888]">Disabled</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">API key:</span>
                <span class="text-[#888888]">Required</span>
              </div>
            </div>
            <button class="mt-4 w-full bg-[#111111] border border-[#333333] text-[#e0e0e0] py-2 px-4 text-sm font-bold hover:border-[#00ffff] hover:text-[#00ffff] transition-all duration-300 font-['Neuropol'] uppercase">
              Skonfiguruj
            </button>
          </div>

          <!-- Custom Integration -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#ff6699] p-6 rounded-sm">
            <div class="flex items-center justify-between mb-4">
              <h4 class="text-[#ff6699] font-['Neuropol'] text-lg uppercase">Custom API</h4>
              <div class="text-2xl">‚ö°</div>
            </div>
            <p class="text-[#a0a0a0] text-sm mb-4">W≈Çasna integracja REST/GraphQL</p>
            <div class="space-y-2">
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Webhooks:</span>
                <span class="text-[#e0e0e0]">Flexible</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Auth:</span>
                <span class="text-[#e0e0e0]">OAuth/API Key</span>
              </div>
              <div class="flex justify-between text-xs">
                <span class="text-[#00ffff]">Support:</span>
                <span class="text-[#e0e0e0]">Full custom</span>
              </div>
            </div>
            <button class="mt-4 w-full bg-[#ff6699] text-[#0a0a0a] py-2 px-4 text-sm font-bold hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase">
              Zapytaj o wycenƒô
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Sync Status Dashboard -->
    <section class="relative z-20 py-8 border-t border-[#333333]">
      <div class="max-w-6xl mx-auto px-4">
        <h3 class="text-[#00ffff] font-['Neuropol'] text-xl uppercase tracking-wide mb-6">
          Status Synchronizacji
        </h3>
        
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Sync Stats -->
          <div class="bg-[#111111] border border-[#333333] p-6 rounded-sm">
            <h4 class="text-[#ff6699] font-['Neuropol'] text-lg uppercase mb-4">Statystyki 24h</h4>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <div class="text-[#00ffff] text-2xl font-bold">2,847</div>
                <div class="text-[#a0a0a0] text-sm">Records synced</div>
              </div>
              <div>
                <div class="text-[#00ffff] text-2xl font-bold">0.3s</div>
                <div class="text-[#a0a0a0] text-sm">Avg sync time</div>
              </div>
              <div>
                <div class="text-[#ff3333] text-2xl font-bold">3</div>
                <div class="text-[#a0a0a0] text-sm">Failed syncs</div>
              </div>
              <div>
                <div class="text-[#00ffff] text-2xl font-bold">99.9%</div>
                <div class="text-[#a0a0a0] text-sm">Success rate</div>
              </div>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="bg-[#111111] border border-[#333333] p-6 rounded-sm">
            <h4 class="text-[#ff6699] font-['Neuropol'] text-lg uppercase mb-4">Ostatnia Aktywno≈õƒá</h4>
            <div class="space-y-3">
              <div class="flex justify-between items-center text-sm">
                <span class="text-[#e0e0e0]">Lead #2847 ‚Üí HubSpot</span>
                <span class="text-[#00ff00]">‚úì 2min</span>
              </div>
              <div class="flex justify-between items-center text-sm">
                <span class="text-[#e0e0e0]">Deal update ‚Üí Salesforce</span>
                <span class="text-[#00ff00]">‚úì 5min</span>
              </div>
              <div class="flex justify-between items-center text-sm">
                <span class="text-[#e0e0e0]">Contact sync ‚Üí Pipedrive</span>
                <span class="text-[#ff3333]">‚úó 12min</span>
              </div>
              <div class="flex justify-between items-center text-sm">
                <span class="text-[#e0e0e0]">Note added ‚Üí HubSpot</span>
                <span class="text-[#00ff00]">‚úì 18min</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Configuration Panel -->
    <section class="relative z-20 py-8 border-t border-[#333333]">
      <div class="max-w-6xl mx-auto px-4">
        <h3 class="text-[#00ffff] font-['Neuropol'] text-xl uppercase tracking-wide mb-6">
          ‚öôÔ∏è Konfiguracja Webhooks
        </h3>
        
        <div class="bg-[#111111] border border-[#333333] p-6 rounded-sm">
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Webhook URLs -->
            <div>
              <h4 class="text-[#ff6699] font-['Neuropol'] text-sm uppercase mb-4">Endpoint URLs</h4>
              <div class="space-y-3">
                <div>
                  <label class="block text-[#00ffff] text-xs uppercase mb-1">New Lead Webhook</label>
                  <input 
                    type="text" 
                    value="https://api.mybonzo.com/webhooks/lead-created"
                    class="w-full bg-[#0a0a0a] border border-[#333333] text-[#e0e0e0] p-2 text-sm focus:border-[#00ffff] focus:outline-none font-mono"
                    readonly
                  />
                </div>
                <div>
                  <label class="block text-[#00ffff] text-xs uppercase mb-1">Lead Update Webhook</label>
                  <input 
                    type="text" 
                    value="https://api.mybonzo.com/webhooks/lead-updated"
                    class="w-full bg-[#0a0a0a] border border-[#333333] text-[#e0e0e0] p-2 text-sm focus:border-[#00ffff] focus:outline-none font-mono"
                    readonly
                  />
                </div>
                <div>
                  <label class="block text-[#00ffff] text-xs uppercase mb-1">Deal Change Webhook</label>
                  <input 
                    type="text" 
                    value="https://api.mybonzo.com/webhooks/deal-changed"
                    class="w-full bg-[#0a0a0a] border border-[#333333] text-[#e0e0e0] p-2 text-sm focus:border-[#00ffff] focus:outline-none font-mono"
                    readonly
                  />
                </div>
              </div>
            </div>

            <!-- Field Mapping -->
            <div>
              <h4 class="text-[#ff6699] font-['Neuropol'] text-sm uppercase mb-4">Field Mapping</h4>
              <div class="space-y-3">
                <div class="flex justify-between items-center text-sm">
                  <span class="text-[#e0e0e0]">Lead Score</span>
                  <span class="text-[#00ffff]">‚Üí custom_field_1</span>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-[#e0e0e0]">AI Classification</span>
                  <span class="text-[#00ffff]">‚Üí lead_status</span>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-[#e0e0e0]">Response Template</span>
                  <span class="text-[#00ffff]">‚Üí notes</span>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-[#e0e0e0]">Industry Tag</span>
                  <span class="text-[#00ffff]">‚Üí company_industry</span>
                </div>
              </div>
              
              <button class="mt-4 w-full bg-[#00ffff] text-[#0a0a0a] py-2 px-4 text-sm font-bold hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase">
                Zapisz Mapping
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

  <style>
    .cyber-grid {
      background-image: 
        linear-gradient(rgba(0, 255, 255, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 255, 0.1) 1px, transparent 1px);
      background-size: 20px 20px;
    }
  </style>
</MyBonzoLayout>