{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"]
    },
    "jsx": "react-jsx",
    "allowJs": true,
    "types": ["astro/client", "vite/client"]
  },
  "include": ["src/**/*", "*.astro", "*.tsx", "*.ts"],
  "exclude": ["node_modules", "dist"]
}