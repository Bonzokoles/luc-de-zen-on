---
import MyBonzoLayout from '../layouts/MyBonzoLayout.astro';
import InteractiveQuizWidget from '../components/InteractiveQuizWidget.svelte';

const id = Astro.url.searchParams.get('id');
let premadeQuiz = null;
let error = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/quiz?id=${id}`);
  if (response.ok) {
    const data = await response.json();
    if (data.success) {
      premadeQuiz = data.quiz;
    } else {
      throw new Error(data.error || 'Quiz not found.');
    }
  } else {
    throw new Error(`API Error: ${response.status}`);
  }
} catch (e) {
  console.error("Failed to fetch pre-made quiz:", e);
  error = e.message;
}
---
<MyBonzoLayout siteTitle={premadeQuiz ? premadeQuiz.title : 'Błąd Quizu'}>
  <main class="min-h-svh relative z-10 pt-20" style="background-color: #0a0a0a;">
    <div class="max-w-4xl mx-auto px-4 py-8">
      <a href="/interactive-quizzes" class="text-cyan-400 hover:text-cyan-200 transition-colors duration-200">← Powrót do listy quizów</a>
      
      {premadeQuiz && (
        <h1 class="text-3xl font-bold text-cyan-300 my-4">{premadeQuiz.title}</h1>
      )}

      {error && (
        <div class="bg-red-900/30 border border-red-500/50 rounded-lg text-red-300 font-mono p-4">
          <h1 class="text-2xl font-bold mb-2">Błąd ładowania quizu</h1>
          <p>{error}</p>
        </div>
      )}

      {premadeQuiz && <InteractiveQuizWidget client:load premadeQuiz={premadeQuiz} />}
    </div>
  </main>
</MyBonzoLayout>
