  .worker-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .worker-details {
    flex: 1;
  }

  .worker-name {
    color: #00bcd4;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .worker-description {
    color: #d1d5db;
    margin-bottom: 0.75rem;
  }

  .worker-endpoints {
