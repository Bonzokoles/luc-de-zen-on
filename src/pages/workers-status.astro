  /* Analytics */
  .analytics-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
  }

  .chart-placeholder {
    display: flex;
    align-items: end;
    gap: 0.5rem;
    height: 200px;
    padding: 1rem;
    background: rgba(15, 23, 42, 0.7);
    border-radius: 8px;
    margin-top: 1rem;
  }

  .chart-bar {
    background: linear-gradient(135deg, #00bcd4 0%, #0099cc 100%);
    width: 100%;
    border-radius: 4px 4px 0 0;
    display: flex;
    align-items: end;
    justify-content: center;
    padding-bottom: 0.5rem;
