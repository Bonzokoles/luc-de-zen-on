            window.open(data.paymentUrl, "_blank");
          } else {
            alert("BĹ‚Ä…d podczas tworzenia pĹ‚atnoĹ›ci");
          }
        })
        .catch((error) => {
          console.error("Payment error:", error);
          alert("BĹ‚Ä…d poĹ‚Ä…czenia z systemem pĹ‚atnoĹ›ci");
        });
    }
  }

