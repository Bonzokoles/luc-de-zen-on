        }, 2000);
      });
    });

    // Quick view functionality
    document.querySelectorAll(".quick-view").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        if (!target) return;

        const productCard = target.closest(".product-card");
        if (!productCard) return;

        const productName = productCard.querySelector("h3")?.textContent;
        alert(`Quick view for "${productName}"`);
      });
    });

    // Category management
    document.querySelectorAll(".manage-btn").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        if (!target) return;

        const categoryCard = target.closest(".category-card");
        if (!categoryCard) return;

        const categoryName = categoryCard.querySelector("h3")?.textContent;
        alert(`Managing category: ${categoryName}`);
      });
    });

    // API testing
    document.querySelectorAll(".test-api-btn").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        if (!target) return;

        const integrationCard = target.closest(".integration-card");
        if (!integrationCard) return;

        const apiName = integrationCard.querySelector("h3")?.textContent;
        
        target.textContent = "Testing...";
        (target as HTMLButtonElement).disabled = true;
        
        setTimeout(() => {
          target.textContent = "Test Success âś“";
          target.style.background = "#10b981";
          
          setTimeout(() => {
            target.textContent = "Test API";
            target.style.background = "";
            (target as HTMLButtonElement).disabled = false;
          }, 3000);
        }, 2000);
      });
    });

    // Real-time dashboard updates
    setInterval(() => {
      const salesValue = document.querySelector('.metric-value');
      if (salesValue && salesValue.textContent) {
        const current = parseFloat(salesValue.textContent.replace('$', '').replace(',', ''));
        const newValue = current + Math.floor(Math.random() * 100);
        salesValue.textContent = `$${newValue.toLocaleString()}`;
      }
    }, 10000);
  </script>
