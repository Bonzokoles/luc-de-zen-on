            }
          }
          
          function startSequentialVisualizerCycle() {
            let cycleCount = 0;
            const totalCycles = 3; // 3 cycles przez wszystkie wizualizatory
            
            // Initially hide all visualizers
            visualizerDivs.forEach((div, index) => {
              div.style.opacity = '0';
              div.style.transition = 'opacity 0.5s ease-in-out';
            });
            
            // Show first visualizer
            if (visualizerDivs[0]) {
              visualizerDivs[0].style.opacity = '0.4';
            }
            
            // Cycle through visualizers every 3 seconds
            visualizerInterval = setInterval(() => {
              // Hide current
              if (visualizerDivs[currentVisualizerIndex]) {
                visualizerDivs[currentVisualizerIndex].style.opacity = '0';
              }
              
              // Move to next
              currentVisualizerIndex = (currentVisualizerIndex + 1) % visualizerDivs.length;
              
              // Check if we completed a full cycle
              if (currentVisualizerIndex === 0) {
                cycleCount++;
              }
              
              // After specified cycles, show all visualizers together
              if (cycleCount >= totalCycles) {
                clearInterval(visualizerInterval);
                visualizerInterval = null;
                
                // Show all visualizers with their default opacity
                visualizerDivs.forEach((div, index) => {
                  if (div) {
                    const defaultOpacity = index === 0 ? '0.4' : 
                                         index === 1 ? '0.3' : '0.8';
                    div.style.opacity = defaultOpacity;
                  }
                });
                
                console.log('🎵 Sequential cycle completed - now showing all visualizers together');
                return;
              }
              
              // Show next with appropriate opacity
              if (visualizerDivs[currentVisualizerIndex]) {
                const defaultOpacity = currentVisualizerIndex === 0 ? '0.4' : 
                                     currentVisualizerIndex === 1 ? '0.3' : '0.8';
                visualizerDivs[currentVisualizerIndex].style.opacity = defaultOpacity;
              }
              
              console.log(`🎵 Cycle ${cycleCount + 1}/${totalCycles} - Switched to visualizer ${currentVisualizerIndex + 1}/${visualizerDivs.length}`);
            }, 3000);
            
            console.log('🎵 Sequential visualizer cycle started - will show all together after 3 complete cycles');
          }
          
          function stopSequentialVisualizerCycle() {
            if (visualizerInterval) {
              clearInterval(visualizerInterval);
              visualizerInterval = null;
            }
            // Show all visualizers with their default opacity
            visualizerDivs.forEach((div, index) => {
              if (div) {
                const defaultOpacity = index === 0 ? '0.4' : 
                                     index === 1 ? '0.3' : '0.8';
                div.style.opacity = defaultOpacity;
              }
            });
          }
          
          // Ensure music player analyser is available for visualizer
          function connectMusicToVisualizer() {
            if (typeof window !== 'undefined' && window.MUSIC) {
              // Make sure music player has analyser ready
              const audioContext = new (window.AudioContext || window.webkitAudioContext)();
              const musicElement = document.querySelector('audio');
              
              if (musicElement && !window.MUSIC_ANALYSER) {
                try {
                  const analyser = audioContext.createAnalyser();
                  analyser.fftSize = 256;
                  
                  const source = audioContext.createMediaElementSource(musicElement);
                  source.connect(analyser);
                  analyser.connect(audioContext.destination);
                  
                  window.MUSIC_ANALYSER = analyser;
                  window.dispatchEvent(new CustomEvent('music-analyser-ready'));
                  console.log('🎵 Music visualizer connected to player');
                } catch (e) {
                  console.warn('Failed to connect music visualizer:', e);
                }
              }
            }
            
            // Retry connection after music player loads
            setTimeout(connectMusicToVisualizer, 1000);
          }
          
          // Start connection attempts and visualizer cycling
          document.addEventListener('DOMContentLoaded', () => {
            connectMusicToVisualizer();
            setTimeout(initSequentialVisualizers, 1500); // Wait for components to load
          });
          setTimeout(connectMusicToVisualizer, 500);
          
          // Global visualizer control functions
          window.startVisualizerCycle = startSequentialVisualizerCycle;
          window.stopVisualizerCycle = stopSequentialVisualizerCycle;
          window.toggleVisualizerCycle = function() {
            if (visualizerInterval) {
              stopSequentialVisualizerCycle();
              console.log('🎵 Visualizer cycle stopped');
            } else {
              startSequentialVisualizerCycle();
              console.log('🎵 Visualizer cycle started');
            }
          };
          
