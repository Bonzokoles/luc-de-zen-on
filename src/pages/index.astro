            } catch (e) {
              console.warn('üö´ Failed to connect music visualizer:', e.message);
            }
            
            // Retry connection only if not initialized yet
            if (!audioContextInitialized) {
              setTimeout(connectMusicToVisualizer, 2000);
            }
          }
          
          // Start connection attempts with delay
