  // SCHOWEK HELPER FUNCTIONS
  function addToSchowek() {
    const textarea = document.getElementById('newSchowekItem');
    const content = textarea.value.trim();
    
    if (!content) {
      alert('Wpisz treść do dodania!');
      return;
    }
    
    let schowekData = JSON.parse(localStorage.getItem('mybonzoSchowek') || '[]');
    schowekData.unshift({
      content: content,
      timestamp: new Date().toISOString(),
      id: Date.now()
    });
    
    localStorage.setItem('mybonzoSchowek', JSON.stringify(schowekData));
    textarea.value = '';
    
    // Odśwież modal
    document.querySelector('[style*="position: fixed"][style*="rgba(0,0,0,0.8)"]')?.remove();
    openSchowek();
  }

  function removeFromSchowek(index) {
    let schowekData = JSON.parse(localStorage.getItem('mybonzoSchowek') || '[]');
    schowekData.splice(index, 1);
    localStorage.setItem('mybonzoSchowek', JSON.stringify(schowekData));
    
    // Odśwież modal
    document.querySelector('[style*="position: fixed"][style*="rgba(0,0,0,0.8)"]')?.remove();
    openSchowek();
  }

  function exportSchowek() {
    const schowekData = JSON.parse(localStorage.getItem('mybonzoSchowek') || '[]');
    const exportText = schowekData.map(item => 
      `[${new Date(item.timestamp).toLocaleString()}]\n${item.content}\n`
    ).join('\n---\n\n');
    
    const blob = new Blob([exportText], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `mybonzo-schowek-${new Date().toISOString().split('T')[0]}.txt`;
    a.click();
    URL.revokeObjectURL(url);
  }

  function clearSchowek() {
    if (confirm('Czy na pewno chcesz wyczyścić cały schowek?')) {
      localStorage.removeItem('mybonzoSchowek');
      document.querySelector('[style*="position: fixed"][style*="rgba(0,0,0,0.8)"]')?.remove();
      openSchowek();
    }
  }

