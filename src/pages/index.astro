        <!-- Script to connect music player with visualizer -->
        <script>
          // Sequential Visualizer Manager - Cycles through three visualizers
          let currentVisualizerIndex = 0;
          let visualizerInterval = null;
          let visualizerDivs = [];
          
          function initSequentialVisualizers() {
            visualizerDivs = [
              // Back layer (music, hue-rotated, bright)
