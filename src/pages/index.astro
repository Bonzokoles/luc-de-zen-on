---
import MainLayout from "../layouts/MainLayout.astro";
import NewsBiznesowe from "../components/NewsBiznesowe";
import MusicPlayerVisualizer from "../components/MusicPlayerVisualizer";
import BalloonLibrary from "../components/animations/BalloonLibrary";
import { SparkleEffect } from "../components/animations/BalloonLibrary";
import BiznessERPBox from "../components/dashboard/BiznessERPBox";
import NodleCHUCKBox from "../components/dashboard/NodleCHUCKBox";
import OrganizerBox from "../components/dashboard/OrganizerBox";
import TabNavigation from "../components/dashboard/TabNavigation";
---

<MainLayout
  title="Dashboard - ZENON_Biznes_HUB"
  description="ZENON_Biznes_HUB - Dashboard z narzędziami biznesowymi, AI workflow i organizerem zadań."
>
  <BalloonLibrary client:load count={20} speed="slow" />
  <SparkleEffect client:load density={15} />
  
  <div class="container mx-auto px-4 py-8 relative z-10">
    <!-- Top Section: Logo and Title -->
    <section class="text-center mb-12 fade-in">
      <div class="flex items-center justify-center gap-6 mb-4">
        <div class="relative w-20 h-20 md:w-24 md:h-24 animate-float">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-400/40 to-primary-600/40 blur-2xl animate-pulse"></div>
          <img
            src="/apple-touch-icon.png"
            alt="ZENON Biznes HUB Logo"
            class="relative w-full h-full object-contain drop-shadow-[0_0_25px_rgba(14,165,233,0.6)]"
          />
        </div>
        <h1 class="text-4xl md:text-5xl font-bold">
          <span class="bg-gradient-to-r from-business-accent via-primary-500 to-business-accent-soft bg-clip-text text-transparent">
            ZENON_Biznes_HUB
          </span>
        </h1>
      </div>
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
      <!-- Left Sidebar: Tab Navigation -->
      <aside class="lg:col-span-3">
        <TabNavigation client:load currentPath="/" />
      </aside>

      <!-- Main Content: 3 Expandable Boxes -->
      <main class="lg:col-span-9 space-y-6">
        <!-- Box 1: Bizness/ERP (z-30, expands DOWN) -->
        <BiznessERPBox client:load />

        <!-- Box 2: Nodle CHUCK (z-20, expands UP-DOWN) -->
        <NodleCHUCKBox client:load />

        <!-- Box 3: Organizer (z-10, expands UP) -->
        <OrganizerBox client:load />
      </main>
    </div>

    <!-- News and Music Player Section -->
    <section class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-12">
      <NewsBiznesowe client:load />
      <MusicPlayerVisualizer client:load />
    </section>
  </div>
</MainLayout>
