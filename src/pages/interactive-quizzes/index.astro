---
import MyBonzoLayout from "../../layouts/MyBonzoLayout.astro";
import DecorativeLines from "../../components/DecorativeLines.astro";
---

<MyBonzoLayout siteTitle="Interactive Quizzes AI | KAROL LISSON">
  <DecorativeLines />

  <main class="min-h-svh relative z-10">
    <!-- Background Grid Pattern -->
    <div class="fixed inset-0 bg-[#0a0a0a]">
      <div class="absolute inset-0 bg-gradient-to-br from-cyan-900/20 via-black to-black"></div>
      <div class="cyber-grid absolute inset-0"></div>
    </div>

    <!-- Header Section -->
    <section class="relative z-20 border-b border-[#333333] pt-20">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-[#00ffff] mb-2 uppercase tracking-wider font-['Neuropol']">
              Interactive Quizzes AI
            </h1>
            <p class="text-[#a0a0a0] text-lg font-['Kenyan_Coffee']">
              Inteligentne quizy adaptujące się do poziomu użytkownika w czasie rzeczywistym
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Feature Overview -->
    <section class="relative z-20 py-12">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <!-- Quiz Builder Card -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300 group">
            <h3 class="text-[#00ffff] font-['Neuropol'] text-xl uppercase tracking-wide">AI Builder</h3>
            <p class="text-[#a0a0a0] mb-4 font-['Kenyan_Coffee']">Kreator inteligentnych quizów z AI.</p>
            <a href="/quiz-new" class="inline-block bg-[#00ffff] text-[#0a0a0a] px-4 py-2 text-sm font-bold hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase tracking-wide">
              STWÓRZ QUIZ
            </a>
          </div>

          <!-- Quiz Library Card -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300 group">
            <h3 class="text-[#00ffff] font-['Neuropol'] text-xl uppercase tracking-wide">Biblioteka</h3>
            <p class="text-[#a0a0a0] mb-4 font-['Kenyan_Coffee']">Kolekcja gotowych quizów i szablonów.</p>
            <a href="/quiz" class="inline-block bg-[#00ffff] text-[#0a0a0a] px-4 py-2 text-sm font-bold hover:brightness-125 transition-all duration-300 font-['Neuropol'] uppercase tracking-wide">
              PRZEGLĄDAJ
            </a>
          </div>

          <!-- Analytics Card -->
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300 group">
            <h3 class="text-[#00ffff] font-['Neuropol'] text-xl uppercase tracking-wide">Analytics</h3>
            <p class="text-[#a0a0a0] mb-4 font-['Kenyan_Coffee']">Zaawansowane analizy wyników (wkrótce).</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Ready-made Quizzes Section -->
    <section class="relative z-20 py-8 border-t border-[#333333]">
      <div class="max-w-6xl mx-auto px-4">
        <h3 class="text-[#00ffff] font-['Neuropol'] text-xl uppercase tracking-wide mb-6">
          Gotowe Quizy
        </h3>
        <div id="premade-quizzes-container" class="grid md:grid-cols-3 gap-4">
          <!-- Quizzes will be loaded here by script -->
          <p class="text-gray-500">Ładowanie quizów...</p>
        </div>
      </div>
    </section>

  </main>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const container = document.getElementById('premade-quizzes-container');
      if (!container) return;

      fetch('/api/quiz?list=true')
        .then(response => response.json())
        .then(data => {
          if (data.success && data.quizzes) {
            container.innerHTML = ''; // Clear loading message
            data.quizzes.forEach(quiz => {
              const card = document.createElement('a');
              card.href = `/quiz?id=${quiz.id}`;
              card.className = 'block bg-[#111111] border border-[#333333] p-4 rounded-sm hover:border-[#00ffff] transition-all duration-300';
              card.innerHTML = `
                <div class="text-[#ff6699] text-sm font-bold mb-2">${quiz.title}</div>
                <div class="text-[#a0a0a0] text-xs mb-2 capitalize">Temat: ${quiz.topic}</div>
                <div class="text-[#a0a0a0] text-xs mb-2 capitalize">Poziom: ${quiz.difficulty}</div>
              `;
              container.appendChild(card);
            });
          } else {
            container.innerHTML = '<p class="text-red-500">Nie udało się załadować gotowych quizów.</p>';
          }
        })
        .catch(error => {
          console.error("Failed to load pre-made quizzes:", error);
          container.innerHTML = '<p class="text-red-500">Błąd serwera podczas ładowania quizów.</p>';
        });
    });
  </script>

  <style>
    .cyber-grid {
      background-image: 
        linear-gradient(rgba(0, 255, 255, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 255, 0.1) 1px, transparent 1px);
      background-size: 20px 20px;
    }
  </style>
</MyBonzoLayout>