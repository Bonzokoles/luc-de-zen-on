        addToConsole('âś… Skan bezpieczeĹ„stwa zakoĹ„czony - brak problemĂłw', 'success');
        showNotification('Skan bezpieczeĹ„stwa zakoĹ„czony', 'info');
        
        // Aktualizuj licznik alertĂłw
        document.getElementById('alertCount').textContent = '0';
      } catch (error) {
        addToConsole(`âťŚ Skan bezpieczeĹ„stwa nieudany: ${error.message}`, 'error');
      }
    }

    // Health checks
    async function checkProduction() {
      addToConsole('âś… Sprawdzanie zdrowia produkcji...', 'system');
      
      try {
        const result = await callAPI('/api/admin/control', 'POST', {
          action: 'health-check',
          environment: 'production'
        });
        
        if (result.healthy) {
          addToConsole('âś… Produkcja: ZDROWA', 'success');
          document.getElementById('prodStatus').textContent = 'Zdrowy';
          document.getElementById('prodStatus').className = 'text-xl font-bold text-green-400';
        } else {
          addToConsole('âťŚ Produkcja: NIEZDROWA', 'error');
          document.getElementById('prodStatus').textContent = 'Niezdrowy';
          document.getElementById('prodStatus').className = 'text-xl font-bold text-red-400';
        }
        
        document.getElementById('lastHealthCheck').textContent = new Date().toLocaleTimeString();
        showNotification(`Produkcja: ${result.healthy ? 'Zdrowy' : 'Niezdrowy'}`, 
                        result.healthy ? 'success' : 'error');
      } catch (error) {
        addToConsole(`âťŚ Sprawdzenie zdrowia produkcji nieudane: ${error.message}`, 'error');
      }
    }

    async function checkStaging() {
      addToConsole('đźŽ­ Sprawdzanie zdrowia staging...', 'system');
      
      try {
        const result = await callAPI('/api/admin/control', 'POST', {
          action: 'health-check',
          environment: 'staging'
        });
        
        addToConsole('âś… Staging: ZDROWY', 'success');
        showNotification('Staging: Zdrowy', 'success');
      } catch (error) {
        addToConsole(`âťŚ Sprawdzenie zdrowia staging nieudane: ${error.message}`, 'error');
      }
