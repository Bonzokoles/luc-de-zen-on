<script>
  // Filter posts by category
  function filterByCategory(category: string) {
    const posts = document.querySelectorAll('.post-item');
    const filters = document.querySelectorAll('.category-filter');
    
    // Update active filter
    filters.forEach(filter => {
      filter.classList.remove('bg-accent', 'text-primary');
      filter.classList.add('bg-secondary', 'text-primary-foreground');
    });
    
    const activeFilter = document.querySelector(`[data-category="${category}"]`);
    if (activeFilter) {
      activeFilter.classList.remove('bg-secondary', 'text-primary-foreground');
      activeFilter.classList.add('bg-accent', 'text-primary');
    }
    
    // Filter posts
    posts.forEach(post => {
      const postCategory = post.getAttribute('data-category');
      if (category === 'Wszystkie' || postCategory === category) {
        post.style.display = 'block';
      } else {
        post.style.display = 'none';
      }
    });
  }

  // Read post function
