    async function generateBlogPost() {
      const topic = document.getElementById('blog-topic').value;
      const category = document.getElementById('blog-category').value;
      const length = document.getElementById('blog-length').value;
      const tone = document.getElementById('blog-tone').value;
      const instructions = document.getElementById('blog-instructions').value;

      if (!topic.trim()) {
        alert('Proszƒô podaƒá temat bloga!');
        return;
      }

      // Show loading state
      const generateBtn = event.target;
      const originalText = generateBtn.textContent;
      generateBtn.textContent = '‚è≥ Generujƒô...';
      generateBtn.disabled = true;

      try {
        const response = await fetch('/api/generate-blog', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            topic,
            category,
            length,
            tone,
            instructions
          })
        });

