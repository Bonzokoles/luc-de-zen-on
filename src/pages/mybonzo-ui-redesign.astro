---
import MainLayout from "../layouts/MainLayout.astro";
import IconWrapper from "../components/IconWrapper";
import { GradientCard, ProgressBar } from "../components/shared/EnhancedVisuals";
---

<MainLayout
  title="MyBonzo UI Redesign Showcase"
  description="Explore the complete design system, components, and UI patterns powering MyBonzo platform"
>
  <div class="container mx-auto px-4 py-12">
    <!-- Hero Section -->
    <section class="text-center mb-16 fade-in">
      <div class="inline-flex items-center justify-center gap-3 mb-6 px-6 py-3 bg-gradient-to-r from-primary-600/20 to-purple-600/20 border border-primary-500/30 backdrop-blur-sm">
        <IconWrapper client:load name="palette" size={32} className="text-primary-400" />
        <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-business-accent via-primary-500 to-purple-400 bg-clip-text text-transparent">
          MyBonzo UI Redesign
        </h1>
      </div>
      <p class="text-xl text-business-text-dim max-w-3xl mx-auto">
        A comprehensive showcase of our design system, components, and UI patterns.
        Built with Astro, React, Tailwind CSS, and Framer Motion.
      </p>
    </section>

    <!-- Color Palette Section -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-8">
        <IconWrapper client:load name="droplet" size={28} className="text-primary-500" />
        <h2 class="text-3xl font-bold">Color Palette</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <!-- Primary Colors -->
        <div class="card">
          <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
            <span class="w-3 h-3 bg-primary-500 inline-block"></span>
            Primary Blues
          </h3>
          <div class="grid grid-cols-5 gap-2">
            <div class="space-y-2">
              <div class="h-16 bg-primary-100 border border-business-border"></div>
              <p class="text-xs text-business-text-dim text-center">50</p>
            </div>
            <div class="space-y-2">
              <div class="h-16 bg-primary-200 border border-business-border"></div>
              <p class="text-xs text-business-text-dim text-center">200</p>
            </div>
            <div class="space-y-2">
              <div class="h-16 bg-primary-400 border border-business-border"></div>
              <p class="text-xs text-business-text-dim text-center">400</p>
            </div>
            <div class="space-y-2">
              <div class="h-16 bg-primary-500 border border-business-border shadow-glow"></div>
              <p class="text-xs text-business-text-dim text-center font-bold">500</p>
            </div>
            <div class="space-y-2">
              <div class="h-16 bg-primary-700 border border-business-border"></div>
              <p class="text-xs text-business-text-dim text-center">700</p>
            </div>
          </div>
        </div>

        <!-- Business Colors -->
        <div class="card">
          <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
            <span class="w-3 h-3 bg-business-accent inline-block"></span>
            Business Accents
          </h3>
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="w-16 h-16 bg-business-accent border border-business-border shadow-glow"></div>
              <div>
                <p class="font-mono text-sm text-business-text">accent</p>
                <p class="text-xs text-business-text-dim">#00d9ff</p>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-16 h-16 bg-business-accent-soft border border-business-border shadow-glow-soft"></div>
              <div>
                <p class="font-mono text-sm text-business-text">accent-soft</p>
                <p class="text-xs text-business-text-dim">#4ade80</p>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-16 h-16 bg-business-warning border border-business-border"></div>
              <div>
                <p class="font-mono text-sm text-business-text">warning</p>
                <p class="text-xs text-business-text-dim">#fbbf24</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Surface Colors -->
      <div class="card">
        <h3 class="text-xl font-bold mb-4">Surface & Background Colors</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="space-y-2">
            <div class="h-24 bg-business-dark border border-business-border"></div>
            <p class="text-sm text-business-text">Dark</p>
            <p class="text-xs text-business-text-dim font-mono">#000000</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-business-surface border border-business-border"></div>
            <p class="text-sm text-business-text">Surface</p>
            <p class="text-xs text-business-text-dim font-mono">#0a0a0a</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-business-border"></div>
            <p class="text-sm text-business-text">Border</p>
            <p class="text-xs text-business-text-dim font-mono">#1a1a1a</p>
          </div>
          <div class="space-y-2">
            <div class="h-24 bg-business-text border border-business-border"></div>
            <p class="text-sm text-business-text">Text</p>
            <p class="text-xs text-business-text-dim font-mono">#e8eaf0</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Typography Section -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-8">
        <IconWrapper client:load name="type" size={28} className="text-primary-500" />
        <h2 class="text-3xl font-bold">Typography</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Font Families -->
        <div class="card">
          <h3 class="text-xl font-bold mb-4">Font Families</h3>
          <div class="space-y-4">
            <div>
              <p class="text-sm text-business-text-dim mb-1">Headings (Poppins)</p>
              <p class="font-heading text-2xl text-business-text">The quick brown fox</p>
            </div>
            <div>
              <p class="text-sm text-business-text-dim mb-1">Body (Inter)</p>
              <p class="font-sans text-lg text-business-text">The quick brown fox jumps over the lazy dog</p>
            </div>
            <div>
              <p class="text-sm text-business-text-dim mb-1">Mono (System)</p>
              <p class="font-mono text-sm text-business-text">const greeting = "Hello World";</p>
            </div>
          </div>
        </div>

        <!-- Type Scale -->
        <div class="card">
          <h3 class="text-xl font-bold mb-4">Type Scale</h3>
          <div class="space-y-3">
            <div class="flex items-baseline gap-4">
              <p class="text-6xl font-bold text-business-text">Aa</p>
              <span class="text-sm text-business-text-dim">text-6xl / 60px</span>
            </div>
            <div class="flex items-baseline gap-4">
              <p class="text-4xl font-bold text-business-text">Aa</p>
              <span class="text-sm text-business-text-dim">text-4xl / 36px</span>
            </div>
            <div class="flex items-baseline gap-4">
              <p class="text-2xl font-bold text-business-text">Aa</p>
              <span class="text-sm text-business-text-dim">text-2xl / 24px</span>
            </div>
            <div class="flex items-baseline gap-4">
              <p class="text-lg text-business-text">Aa</p>
              <span class="text-sm text-business-text-dim">text-lg / 18px</span>
            </div>
            <div class="flex items-baseline gap-4">
              <p class="text-base text-business-text">Aa</p>
              <span class="text-sm text-business-text-dim">text-base / 16px</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Components Gallery -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-8">
        <IconWrapper client:load name="package" size={28} className="text-primary-500" />
        <h2 class="text-3xl font-bold">Components Gallery</h2>
      </div>

      <!-- Buttons -->
      <div class="card mb-8">
        <h3 class="text-xl font-bold mb-4">Buttons</h3>
        <div class="flex flex-wrap gap-4">
          <button class="btn-primary">Primary Button</button>
          <button class="btn-secondary">Secondary Button</button>
          <button class="px-6 py-3 bg-business-accent text-business-dark font-semibold hover:bg-business-accent/80 transition-all hover:shadow-glow">
            Accent Button
          </button>
          <button class="px-6 py-3 border-2 border-primary-500 text-primary-500 font-semibold hover:bg-primary-500 hover:text-white transition-all">
            Outlined Button
          </button>
          <button class="px-6 py-3 text-business-text-dim hover:text-business-text transition-colors">
            Text Button
          </button>
        </div>
      </div>

      <!-- Cards -->
      <div class="card mb-8">
        <h3 class="text-xl font-bold mb-4">Cards & Containers</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="card bg-business-surface border-primary-500/30 hover:border-primary-500 transition-all hover:shadow-glow">
            <div class="flex items-center gap-3 mb-3">
              <IconWrapper client:load name="zap" size={24} className="text-primary-500" />
              <h4 class="font-bold">Standard Card</h4>
            </div>
            <p class="text-sm text-business-text-dim">
              A basic card component with hover effects and border animations.
            </p>
          </div>

          <div class="card bg-gradient-to-br from-purple-900/30 to-pink-900/30 border-purple-500/50 hover:border-purple-400 transition-all group">
            <div class="flex items-center gap-3 mb-3">
              <IconWrapper client:load name="sparkles" size={24} className="text-purple-400" />
              <h4 class="font-bold">Gradient Card</h4>
            </div>
            <p class="text-sm text-business-text-dim">
              Card with gradient background and enhanced visual effects.
            </p>
          </div>

          <div class="relative overflow-hidden border border-business-border bg-business-surface p-6">
            <div class="absolute top-0 right-0 w-20 h-20 bg-primary-500/20 blur-3xl"></div>
            <div class="relative flex items-center gap-3 mb-3">
              <IconWrapper client:load name="star" size={24} className="text-business-accent" />
              <h4 class="font-bold">Glow Card</h4>
            </div>
            <p class="text-sm text-business-text-dim relative">
              Card with ambient glow effects for special content.
            </p>
          </div>
        </div>
      </div>

      <!-- Badges & Tags -->
      <div class="card mb-8">
        <h3 class="text-xl font-bold mb-4">Badges & Tags</h3>
        <div class="flex flex-wrap gap-3">
          <span class="px-3 py-1 bg-primary-500/20 text-primary-300 text-sm font-semibold border border-primary-400/40">
            Primary Badge
          </span>
          <span class="px-3 py-1 bg-business-accent/20 text-business-accent text-sm font-semibold border border-business-accent/40">
            Accent Badge
          </span>
          <span class="px-3 py-1 bg-business-accent-soft/20 text-business-accent-soft text-sm font-semibold border border-business-accent-soft/40">
            Success Badge
          </span>
          <span class="px-3 py-1 bg-business-warning/20 text-business-warning text-sm font-semibold border border-business-warning/40">
            Warning Badge
          </span>
          <span class="px-3 py-1 bg-red-500/20 text-red-400 text-sm font-semibold border border-red-400/40">
            Error Badge
          </span>
          <span class="px-3 py-1 bg-purple-500/20 text-purple-300 text-sm font-semibold animate-pulse border border-purple-400/40 flex items-center gap-1">
            <IconWrapper client:load name="sparkles" size={14} className="text-purple-300" />
            NEW
          </span>
        </div>
      </div>

      <!-- Form Elements -->
      <div class="card mb-8">
        <h3 class="text-xl font-bold mb-4">Form Elements</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-business-text mb-2">Text Input</label>
            <input
              type="text"
              placeholder="Enter your text..."
              class="w-full px-4 py-3 bg-business-dark border border-business-border text-business-text placeholder-business-text-dim focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20 transition-all"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-business-text mb-2">Select Dropdown</label>
            <select class="w-full px-4 py-3 bg-business-dark border border-business-border text-business-text focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20 transition-all">
              <option>Option 1</option>
              <option>Option 2</option>
              <option>Option 3</option>
            </select>
          </div>
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-business-text mb-2">Textarea</label>
            <textarea
              rows="3"
              placeholder="Enter your message..."
              class="w-full px-4 py-3 bg-business-dark border border-business-border text-business-text placeholder-business-text-dim focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20 transition-all"
            ></textarea>
          </div>
        </div>
      </div>

      <!-- Progress & Status -->
      <div class="card">
        <h3 class="text-xl font-bold mb-4">Progress & Status Indicators</h3>
        <div class="space-y-6">
          <div>
            <div class="flex justify-between text-sm mb-2">
              <span class="text-business-text">Progress Bar (75%)</span>
              <span class="text-business-text-dim">75%</span>
            </div>
            <ProgressBar client:load value={75} color="bg-primary-500" />
          </div>
          <div>
            <div class="flex justify-between text-sm mb-2">
              <span class="text-business-text">Success (100%)</span>
              <span class="text-business-accent-soft">Complete</span>
            </div>
            <ProgressBar client:load value={100} color="bg-business-accent-soft" />
          </div>
          <div>
            <div class="flex justify-between text-sm mb-2">
              <span class="text-business-text">Warning (45%)</span>
              <span class="text-business-warning">In Progress</span>
            </div>
            <ProgressBar client:load value={45} color="bg-business-warning" />
          </div>
        </div>
      </div>
    </section>

    <!-- Animations & Effects -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-8">
        <IconWrapper client:load name="zap" size={28} className="text-primary-500" />
        <h2 class="text-3xl font-bold">Animations & Effects</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="card hover:scale-105 transition-transform duration-300">
          <h4 class="font-bold mb-2">Hover Scale</h4>
          <p class="text-sm text-business-text-dim">Hover to see scale effect</p>
        </div>

        <div class="card hover:-translate-y-2 transition-transform duration-300">
          <h4 class="font-bold mb-2">Hover Lift</h4>
          <p class="text-sm text-business-text-dim">Hover to see lift effect</p>
        </div>

        <div class="card hover:border-primary-500 hover:shadow-2xl hover:shadow-primary-500/20 transition-all duration-300">
          <h4 class="font-bold mb-2">Glow on Hover</h4>
          <p class="text-sm text-business-text-dim">Hover to see glow effect</p>
        </div>
      </div>

      <div class="card mt-6">
        <h4 class="font-bold mb-4">Floating Animation</h4>
        <div class="flex justify-center items-center py-8">
          <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-purple-500 flex items-center justify-center shadow-glow animate-float">
            <IconWrapper client:load name="rocket" size={32} className="text-white" />
          </div>
        </div>
      </div>
    </section>

    <!-- Icons Showcase -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-8">
        <IconWrapper client:load name="grid" size={28} className="text-primary-500" />
        <h2 class="text-3xl font-bold">Icon System</h2>
      </div>

      <div class="card">
        <h3 class="text-xl font-bold mb-4">Lucide Icons (via IconWrapper)</h3>
        <div class="grid grid-cols-4 md:grid-cols-8 gap-6">
          <div class="flex flex-col items-center gap-2">
            <IconWrapper client:load name="home" size={32} className="text-primary-500" />
            <span class="text-xs text-business-text-dim">home</span>
          </div>
          <div class="flex flex-col items-center gap-2">
            <IconWrapper client:load name="user" size={32} className="text-primary-500" />
            <span class="text-xs text-business-text-dim">user</span>
          </div>
          <div class="flex flex-col items-center gap-2">
            <IconWrapper client:load name="settings" size={32} className="text-primary-500" />
            <span class="text-xs text-business-text-dim">settings</span>
          </div>
          <div class="flex flex-col items-center gap-2">
            <IconWrapper client:load name="bell" size={32} className="text-business-accent" />
            <span class="text-xs text-business-text-dim">bell</span>
          </div>
          <div class="flex flex-col items-center gap-2">
            <IconWrapper client:load name="heart" size={32} className="text-red-400" />
            <span class="text-xs text-business-text-dim">heart</span>
          </div>
          <div class="flex flex-col items-center gap-2">
            <IconWrapper client:load name="star" size={32} className="text-business-warning" />
            <span class="text-xs text-business-text-dim">star</span>
          </div>
          <div class="flex flex-col items-center gap-2">
            <IconWrapper client:load name="check" size={32} className="text-business-accent-soft" />
            <span class="text-xs text-business-text-dim">check</span>
          </div>
          <div class="flex flex-col items-center gap-2">
            <IconWrapper client:load name="x" size={32} className="text-red-400" />
            <span class="text-xs text-business-text-dim">x</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Layout Patterns -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-8">
        <IconWrapper client:load name="layout" size={28} className="text-primary-500" />
        <h2 class="text-3xl font-bold">Layout Patterns</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="card">
          <h3 class="font-bold mb-4">Two Column Grid</h3>
          <div class="grid grid-cols-2 gap-4">
            <div class="h-24 bg-primary-500/10 border border-primary-500/30 flex items-center justify-center">
              <span class="text-sm text-business-text-dim">Column 1</span>
            </div>
            <div class="h-24 bg-primary-500/10 border border-primary-500/30 flex items-center justify-center">
              <span class="text-sm text-business-text-dim">Column 2</span>
            </div>
          </div>
        </div>

        <div class="card">
          <h3 class="font-bold mb-4">Three Column Grid</h3>
          <div class="grid grid-cols-3 gap-3">
            <div class="h-24 bg-business-accent/10 border border-business-accent/30 flex items-center justify-center">
              <span class="text-xs text-business-text-dim">1</span>
            </div>
            <div class="h-24 bg-business-accent/10 border border-business-accent/30 flex items-center justify-center">
              <span class="text-xs text-business-text-dim">2</span>
            </div>
            <div class="h-24 bg-business-accent/10 border border-business-accent/30 flex items-center justify-center">
              <span class="text-xs text-business-text-dim">3</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Tech Stack -->
    <section class="mb-16">
      <div class="flex items-center gap-3 mb-8">
        <IconWrapper client:load name="code" size={28} className="text-primary-500" />
        <h2 class="text-3xl font-bold">Tech Stack</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="card text-center hover:border-primary-500 transition-all">
          <div class="text-4xl mb-3">‚ö°</div>
          <h4 class="font-bold mb-2">Astro</h4>
          <p class="text-sm text-business-text-dim">Static Site Generator</p>
        </div>
        <div class="card text-center hover:border-primary-500 transition-all">
          <div class="text-4xl mb-3">‚öõÔ∏è</div>
          <h4 class="font-bold mb-2">React</h4>
          <p class="text-sm text-business-text-dim">UI Components</p>
        </div>
        <div class="card text-center hover:border-primary-500 transition-all">
          <div class="text-4xl mb-3">üé®</div>
          <h4 class="font-bold mb-2">Tailwind CSS</h4>
          <p class="text-sm text-business-text-dim">Utility-First Styling</p>
        </div>
        <div class="card text-center hover:border-primary-500 transition-all">
          <div class="text-4xl mb-3">‚ú®</div>
          <h4 class="font-bold mb-2">Framer Motion</h4>
          <p class="text-sm text-business-text-dim">Animations</p>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center card bg-gradient-to-r from-primary-900/30 to-purple-900/30 border-primary-700">
      <div class="inline-flex items-center gap-2 mb-4">
        <IconWrapper client:load name="rocket" size={32} className="text-primary-400" />
        <h2 class="text-3xl font-bold">Ready to Build?</h2>
      </div>
      <p class="text-business-text-dim mb-6 max-w-2xl mx-auto">
        This design system is ready to power your next feature. All components are reusable, accessible, and optimized for performance.
      </p>
      <div class="flex gap-4 justify-center">
        <a href="/" class="btn-primary">
          ‚Üê Back to Home
        </a>
        <a href="/narzedzia" class="btn-secondary">
          Explore Tools ‚Üí
        </a>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .fade-in {
    animation: fadeIn 0.5s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
  }

  ::-webkit-scrollbar-track {
    background: #0a0a0a;
  }

  ::-webkit-scrollbar-thumb {
    background: #1a1a1a;
    border-radius: 6px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #00d9ff;
  }
</style>
