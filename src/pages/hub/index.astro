---
import Layout from "../../layouts/BackroomInterface.astro";
import HubCard from "../../components/HubCard.astro";
---

<Layout siteTitle="AI WORKERS HUB">
  <section class="max-w-6xl mx-auto py-12">
    <h1 class="text-3xl font-bold text-cyber-blue text-center">AI WORKERS</h1>
    <p class="text-center text-cyber-text-dim mt-4">
      Zaawansowane narzędzia AI dostępne na platformie
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
      <HubCard
        title="Generator Obrazów"
        description="Twórz obrazy z tekstu."
        href="/hub/generator"
      >
        <span slot="icon">🖼️</span>
      </HubCard>

      <HubCard
        title="AI Chatbot"
        description="Inteligentny asystent do rozmów."
        href="/hub/chatbot"
      >
        <span slot="icon">💬</span>
      </HubCard>

      <HubCard
        title="BigQuery Analytics"
        description="Analizuj dane i wykonuj zapytania SQL."
        href="/hub/bigquery"
      >
        <span slot="icon">📊</span>
      </HubCard>

      <HubCard
        title="Kaggle Datasets"
        description="Przeszukuj zbiory danych i konkursy."
        href="/hub/kaggle"
      >
        <span slot="icon">📁</span>
      </HubCard>

      <HubCard
        title="Tavily AI Search"
        description="Zaawansowane wyszukiwanie internetowe."
        href="/hub/tavily"
      >
        <span slot="icon">🔎</span>
      </HubCard>

      <HubCard
        title="Status Workerów"
        description="Sprawdź status i dostępność API."
        href="/hub/status"
      >
        <span slot="icon">🛰️</span>
      </HubCard>
    </div>

    <h2 class="text-2xl font-bold text-cyber-blue mt-12">Dodatkowe funkcje</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
      <HubCard
        title="Funkcja 1"
        description="Opis funkcji 1"
        href="/hub/functions/1"><span slot="icon">🔧</span></HubCard
      >
      <HubCard
        title="Funkcja 2"
        description="Opis funkcji 2"
        href="/hub/functions/2"><span slot="icon">⚙️</span></HubCard
      >
      <HubCard
        title="Funkcja 3"
        description="Opis funkcji 3"
        href="/hub/functions/3"><span slot="icon">🧰</span></HubCard
      >
    </div>

    <div class="mt-12 text-center">
      <a class="text-cyber-blue underline" href="/dashboard"
        >Otwórz Dashboard (aktualna strona)</a
      >
    </div>
  </section>
</Layout>
