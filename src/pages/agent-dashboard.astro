---
import MyBonzoLayout from "../layouts/MyBonzoLayout.astro";
---

<MyBonzoLayout title="Dashboard Klienta - MyBonzo AI">
  <main class="min-h-svh">
    <!-- Header Section -->
    <section class="border border-edge">
      <div class="max-w-6xl mx-auto border-x border-edge">
        <div class="flex justify-between max-h-72 min-h-64">
          <div class="mt-auto">
            <span
              style="writing-mode: vertical-lr;"
              class="text-edge block px-2 text-xl font-semibold tracking-[0.3em]"
            >
              CLIENT_DASH
            </span>
          </div>
          <span class="mt-auto">
            <span
              style=""
              class="text-edge block px-2 text-xl font-semibold tracking-[0.3em]"
            >
              DASHBOARD
            </span>
          </span>
        </div>
      </div>
    </section>

    <!-- Navigation Section -->
    <section class="border border-edge">
      <div class="max-w-6xl mx-auto border-x border-edge">
        <div class="flex flex-row p-2">
          <a class="hover:brightness-125" href="/">
            <h1 class="text-4xl sm:text-5xl">DASHBOARD KLIENTA</h1>
            <h2 class="text-2xl sm:text-3xl">MyBonzo AI - Panel Użytkownika</h2>
          </a>

          <div class="hidden ml-auto gap-4 md:gap-0 md:flex md:flex-col">
            <div class="ml-auto flex items-center gap-4">
              <span class="text-sm text-edge" id="userInfo">Klient</span>
              <button
                id="logoutBtn"
                class="px-3 py-1 bg-red-600 hover:bg-red-700 text-white rounded text-sm transition-colors"
              >
                Wyloguj
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content Section -->
    <section
      class="ai-workers-section flex flex-col py-16"
      style="background: rgba(0, 0, 0, 0.5);"
    >
      <div class="section-container max-w-6xl mx-auto">
        <h2 class="section-title">PANEL KLIENTA</h2>
        <p class="section-description">
          Zarządzaj swoimi agentami AI i monitoruj ich aktywność
        </p>

        <!-- Welcome Container -->
        <div
          class="welcome-container border border-edge rounded-lg overflow-hidden mt-8 mb-8"
          style="background: rgba(0, 0, 0, 0.5);"
        >
          <div
            class="welcome-header border-b border-edge p-4"
            style="background: rgba(0, 0, 0, 0.5);"
          >
            <div class="flex items-center gap-3">
              <div class="w-3 h-3 bg-cyan-400 rounded-full animate-pulse"></div>
              <span class="text-primary-foreground font-semibold">
                Client Access Portal
              </span>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold text-primary-foreground mb-2">
              Witaj w MyBonzo AI
            </h3>
            <p class="text-edge">
              Zarządzaj swoimi agentami AI i monitoruj ich aktywność w czasie
              rzeczywistym.
            </p>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div
            class="stats-card border border-edge rounded-lg p-6"
            style="background: rgba(0, 0, 0, 0.5);"
          >
            <div class="flex items-center">
              <div class="p-3 bg-blue-500/20 rounded-lg border border-edge">
                <svg
                  class="w-6 h-6 text-blue-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                  ></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-edge">Aktywne Agenty</p>
                <p
                  class="text-2xl font-bold text-primary-foreground"
                  id="activeAgents"
                >
                  0
                </p>
              </div>
            </div>
          </div>

          <div
            class="stats-card border border-edge rounded-lg p-6"
            style="background: rgba(0, 0, 0, 0.5);"
          >
            <div class="flex items-center">
              <div class="p-3 bg-green-500/20 rounded-lg border border-edge">
                <svg
                  class="w-6 h-6 text-green-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-edge">Zapytania Dzisiaj</p>
                <p
                  class="text-2xl font-bold text-primary-foreground"
                  id="todayQueries"
                >
                  0
                </p>
              </div>
            </div>
          </div>

          <div
            class="stats-card border border-edge rounded-lg p-6"
            style="background: rgba(0, 0, 0, 0.5);"
          >
            <div class="flex items-center">
              <div class="p-3 bg-cyan-500/20 rounded-lg border border-edge">
                <svg
                  class="w-6 h-6 text-cyan-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-edge">Sukces</p>
                <p
                  class="text-2xl font-bold text-primary-foreground"
                  id="successRate"
                >
                  98%
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Available Agents -->
        <div
          class="agents-container border border-edge rounded-lg overflow-hidden mb-8"
          style="background: rgba(0, 0, 0, 0.5);"
        >
          <div
            class="agents-header border-b border-edge p-4"
            style="background: rgba(0, 0, 0, 0.5);"
          >
            <h3 class="text-xl font-bold text-primary-foreground">
              Dostępne Agenty
            </h3>
          </div>
          <div class="p-6">
            <div
              class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
              id="agentsList"
            >
              <!-- Agents will be loaded here -->
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div
          class="actions-container border border-edge rounded-lg overflow-hidden"
          style="background: rgba(0, 0, 0, 0.5);"
        >
          <div
            class="actions-header border-b border-edge p-4"
            style="background: rgba(0, 0, 0, 0.5);"
          >
            <h3 class="text-xl font-bold text-primary-foreground">
              Szybkie Akcje
            </h3>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              <button
                class="action-card p-4 bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors text-left border border-edge"
              >
                <div class="flex items-center mb-2">
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                    ></path>
                  </svg>
                  <span class="font-semibold">Przetestuj Agenta</span>
                </div>
                <p class="text-sm text-gray-300">
                  Sprawdź działanie wybranego agenta
                </p>
              </button>

              <button
                class="action-card p-4 bg-purple-600 hover:bg-purple-700 rounded-lg transition-colors text-left border border-edge"
              >
                <div class="flex items-center mb-2">
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                    ></path>
                  </svg>
                  <span class="font-semibold">Zobacz Statystyki</span>
                </div>
                <p class="text-sm text-gray-300">
                  Przejrzyj szczegółowe metryki
                </p>
              </button>

              <button
                class="action-card p-4 bg-green-600 hover:bg-green-700 rounded-lg transition-colors text-left border border-edge"
              >
                <div class="flex items-center mb-2">
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    ></path>
                  </svg>
                  <span class="font-semibold">Dokumentacja API</span>
                </div>
                <p class="text-sm text-gray-300">Przewodnik integracji</p>
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</MyBonzoLayout>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Check authentication
    const authData = sessionStorage.getItem("mybonzo_auth");
    if (!authData) {
      window.location.href = "/login";
      return;
    }

    const parsed = JSON.parse(authData);
    if (!parsed.authenticated || parsed.userType !== "client") {
      window.location.href = "/login";
      return;
    }

    // Update user info
    document.getElementById("userInfo").textContent =
      `Klient - zalogowany ${new Date(parsed.loginTime).toLocaleString()}`;

    // Load sample data
    loadDashboardData();
    loadAgents();

    // Logout functionality
    document
      .getElementById("logoutBtn")
      ?.addEventListener("click", function () {
        sessionStorage.removeItem("mybonzo_auth");
        window.location.href = "/login";
      });

    function loadDashboardData() {
      // Simulate loading data
      setTimeout(() => {
        document.getElementById("activeAgents").textContent = "3";
        document.getElementById("todayQueries").textContent = "247";
        document.getElementById("successRate").textContent = "98.5%";
      }, 500);
    }

    function loadAgents() {
      const agentsList = document.getElementById("agentsList");
      const sampleAgents = [
        {
          name: "Customer Support Bot",
          status: "active",
          description: "Agent obsługi klienta",
          queries: 156,
        },
        {
          name: "Data Analyzer",
          status: "active",
          description: "Analiza danych biznesowych",
          queries: 67,
        },
        {
          name: "Content Generator",
          status: "inactive",
          description: "Generowanie treści marketingowych",
          queries: 24,
        },
      ];

      agentsList.innerHTML = sampleAgents
        .map(
          (agent) => `
			<div class="bg-gray-800/50 rounded-lg p-4 border border-gray-600">
				<div class="flex items-center justify-between mb-2">
					<h4 class="font-semibold text-white">${agent.name}</h4>
					<span class="px-2 py-1 text-xs rounded-full ${
            agent.status === "active"
              ? "bg-green-500/20 text-green-400"
              : "bg-red-500/20 text-red-400"
          }">
						${agent.status === "active" ? "Aktywny" : "Nieaktywny"}
					</span>
				</div>
				<p class="text-sm text-gray-400 mb-2">${agent.description}</p>
				<p class="text-xs text-gray-500">${agent.queries} zapytań dzisiaj</p>
			</div>
		`
        )
        .join("");
    }
  });
</script>

<style>
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #1f2937;
  }

  ::-webkit-scrollbar-thumb {
    background: #4b5563;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
</style>
