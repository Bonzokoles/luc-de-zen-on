                        <option value="general">Asystent og√≥lny</option>
                        <option value="marketing">Marketing i sprzeda≈º</option>
                        <option value="content">Tworzenie tre≈õci</option>
                        <option value="analysis">Analiza danych</option>
                        <option value="coding">Programowanie</option>
                        <option value="education">Edukacja</option>
                        <option value="customer">Obs≈Çuga klienta</option>
                    </select>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="display: block; color: #00d9ff; font-weight: 600; margin-bottom: 8px;">Poziom kreatywno≈õci</label>
                    <input 
                        type="range" 
                        id="creativityLevel" 
                        min="0" 
                        max="100" 
                        value="50"
                        style="width: 100%;"
                    />
                    <div style="display: flex; justify-content: space-between; color: rgba(255,255,255,0.6); font-size: 0.8rem; margin-top: 5px;">
                        <span>Konserwatywny</span>
                        <span>Zbalansowany</span>
                        <span>Kreatywny</span>
                    </div>
                </div>

                <CyberpunkButton 
                    text="üöÄ Stw√≥rz Agenta" 
                    variant="primary" 
                    size="md"
                    onclick="createAgent()"
                />
            </div>
        </div>

        <!-- Agent Personality -->
        <div style="background: rgba(0,0,0,0.4); border: 1px solid rgba(0,217,255,0.3); border-radius: 12px; padding: 20px;">
            <h3 style="color: #00d9ff; margin-bottom: 15px;">üé≠ Osobowo≈õƒá i styl komunikacji</h3>
            <textarea 
                id="agentPersonality" 
                placeholder="Opisz jak agent ma siƒô zachowywaƒá, jaki ma byƒá jego styl komunikacji, jakie ma mieƒá specjalne umiejƒôtno≈õci..."
                style="width: 100%; height: 120px; padding: 12px; background: rgba(0,0,0,0.6); border: 1px solid rgba(0,217,255,0.3); border-radius: 6px; color: white; resize: vertical;"
            ></textarea>
        </div>
    </GlassPanel>

    <!-- Existing Agents -->
    <GlassPanel title="üë• Twoi Agenci AI" variant="default" padding="lg">
        <div id="agentsContainer">
            {userAgents && userAgents.length > 0 ? (
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
                    {userAgents.map((agent) => (
                        <div class="agent-card" style="background: rgba(0,0,0,0.4); border: 1px solid rgba(0,217,255,0.3); border-radius: 12px; padding: 20px; transition: all 0.3s ease;">
                            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 15px;">
                                <h3 style="color: #00d9ff; margin: 0;">{agent.name}</h3>
                                <span style="background: rgba(34,197,94,0.2); color: #22c55e; padding: 4px 8px; border-radius: 12px; font-size: 0.8rem;">
                                    Aktywny
                                </span>
                            </div>
                            
                            <div style="margin-bottom: 15px;">
                                <div style="color: rgba(255,255,255,0.7); font-size: 0.9rem; margin-bottom: 5px;">
                                    <strong>Specjalizacja:</strong> {agent.specialization || 'Og√≥lna'}
                                </div>
                                <div style="color: rgba(255,255,255,0.7); font-size: 0.9rem; margin-bottom: 10px;">
                                    <strong>Utworzony:</strong> {new Date(agent.createdAt).toLocaleDateString()}
                                </div>
                                <p style="color: rgba(255,255,255,0.8); font-size: 0.9rem; line-height: 1.4;">
                                    {agent.description?.substring(0, 100)}...
                                </p>
                            </div>

                            <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                                <CyberpunkButton 
                                    text="üí¨ Chat" 
                                    variant="primary" 
                                    size="sm"
                                    href={`/chat/${agent.id}`}
                                />
                                <CyberpunkButton 
                                    text="‚öôÔ∏è Edytuj" 
                                    variant="outline" 
                                    size="sm"
                                    onclick={`editAgent('${agent.id}')`}
                                />
                                <CyberpunkButton 
                                    text="üìä Stats" 
                                    variant="outline" 
                                    size="sm"
                                    onclick={`showAgentStats('${agent.id}')`}
                                />
                            </div>
                        </div>
                    ))}
                </div>
            ) : (
                <div style="text-align: center; padding: 40px 20px;">
                    <div style="color: rgba(255,255,255,0.6); font-size: 1.1rem; margin-bottom: 20px;">
                        Nie masz jeszcze ≈ºadnych agent√≥w AI
                    </div>
                    <p style="color: rgba(255,255,255,0.4); margin-bottom: 20px;">
                        Stw√≥rz swojego pierwszego agenta u≈ºywajƒÖc kreatora powy≈ºej
                    </p>
                    <CyberpunkButton 
                        text="üöÄ Stw√≥rz pierwszego agenta" 
                        variant="primary" 
                        size="lg"
                        onclick="scrollToCreator()"
                    />
                </div>
            )}
        </div>

        <!-- Agent Templates Examples -->
        <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid rgba(0,217,255,0.2);">
            <h3 style="color: #00d9ff; margin-bottom: 20px; text-align: center;">üí° Przyk≈Çady agent√≥w do stworzenia</h3>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px;">
                <div style="background: rgba(0,217,255,0.05); border: 1px solid rgba(0,217,255,0.2); border-radius: 8px; padding: 15px;">
                    <div style="color: #00d9ff; font-weight: 600; margin-bottom: 8px;">üìß Email Marketing Specialist</div>
                    <div style="color: rgba(255,255,255,0.7); font-size: 0.9rem;">Ekspert od kampanii mailowych i automation marketingu</div>
                </div>
                
                <div style="background: rgba(0,217,255,0.05); border: 1px solid rgba(0,217,255,0.2); border-radius: 8px; padding: 15px;">
                    <div style="color: #00d9ff; font-weight: 600; margin-bottom: 8px;">üìä Data Analyst</div>
                    <div style="color: rgba(255,255,255,0.7); font-size: 0.9rem;">Analizuje dane i tworzy raporty biznesowe</div>
                </div>
                
                <div style="background: rgba(0,217,255,0.05); border: 1px solid rgba(0,217,255,0.2); border-radius: 8px; padding: 15px;">
                    <div style="color: #00d9ff; font-weight: 600; margin-bottom: 8px;">‚úçÔ∏è Content Writer</div>
                    <div style="color: rgba(255,255,255,0.7); font-size: 0.9rem;">Tworzy anga≈ºujƒÖce tre≈õci dla social media i blog√≥w</div>
                </div>
                
                <div style="background: rgba(0,217,255,0.05); border: 1px solid rgba(0,217,255,0.2); border-radius: 8px; padding: 15px;">
                    <div style="color: #00d9ff; font-weight: 600; margin-bottom: 8px;">üéì Learning Assistant</div>
                    <div style="color: rgba(255,255,255,0.7); font-size: 0.9rem;">Pomaga w nauce i rozwoju zawodowym</div>
                </div>
            </div>
        </div>
    </GlassPanel>

    <style>
        .agent-template-btn:hover {
            background: rgba(0,217,255,0.2) !important;
            border-color: rgba(0,217,255,0.6) !important;
            transform: translateY(-2px);
        }

        .agent-card:hover {
            border-color: rgba(0,217,255,0.6);
            transform: translateY(-4px);
            box-shadow: 0 8px 25px rgba(0,217,255,0.2);
        }

        #creativityLevel {
            background: rgba(0,0,0,0.6);
            border: 1px solid rgba(0,217,255,0.3);
            border-radius: 4px;
            height: 6px;
        }

        #creativityLevel::-webkit-slider-thumb {
            background: linear-gradient(135deg, #00d9ff 0%, #0099cc 100%);
            border: none;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            cursor: pointer;
        }
    </style>

    <script>
        // Agent templates data
        const agentTemplates = {
            business: {
                name: "Asystent Biznesowy Pro",
                specialization: "marketing",
                personality: "Profesjonalny, analityczny asystent biznesowy. Specjalizuje siƒô w strategii marketingowej, analizie rynku i planowaniu biznesowym. Komunikuje siƒô jasno i konkretnie, zawsze podaje ≈∫r√≥d≈Ça i dane."
            },
            creative: {
                name: "Kreatywny AI Artysta",
                specialization: "content",
                personality: "Kreatywny, inspirujƒÖcy asystent skupiony na tre≈õciach artystycznych. Pomaga w pisaniu, projektowaniu i burzy m√≥zg√≥w. Ma ≈ºywy styl komunikacji i lubi eksperymentowaƒá z nowymi pomys≈Çami."
            },
            technical: {
                name: "Dev Assistant Pro",
                specialization: "coding",
                personality: "Techniczny ekspert programowania. Zna wiele jƒôzyk√≥w programowania, frameworki i najlepsze praktyki. Komunikuje siƒô precyzyjnie, podaje przyk≈Çady kodu i wyja≈õnia z≈Ço≈ºone koncepty w prosty spos√≥b."
            },
            research: {
                name: "Research Specialist",
                specialization: "analysis",
                personality: "Metodyczny badacz i analityk. Specjalizuje siƒô w gromadzeniu informacji, analizie danych i tworzeniu raport√≥w. Zawsze weryfikuje ≈∫r√≥d≈Ça i przedstawia obiektywne analizy."
            }
        };

        // Template selection
        document.querySelectorAll('.agent-template-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const template = agentTemplates[this.dataset.template];
                if (template) {
                    document.getElementById('agentName').value = template.name;
                    document.getElementById('agentSpecialization').value = template.specialization;
                    document.getElementById('agentPersonality').value = template.personality;
                    
                    // Visual feedback
                    this.style.background = 'rgba(0,217,255,0.3)';
                    setTimeout(() => {
                        this.style.background = 'rgba(0,217,255,0.1)';
                    }, 300);
                }
            });
        });

        // Create agent function
        async function createAgent() {
            const name = document.getElementById('agentName').value;
            const specialization = document.getElementById('agentSpecialization').value;
            const personality = document.getElementById('agentPersonality').value;
            const creativity = document.getElementById('creativityLevel').value;

            if (!name.trim()) {
                alert('Proszƒô podaƒá nazwƒô agenta');
                return;
            }

            if (!specialization) {
                alert('Proszƒô wybraƒá specjalizacjƒô');
                return;
            }

            try {
                const response = await fetch('/api/agents/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        name,
                        specialization,
                        personality,
                        creativity: parseInt(creativity),
                        description: personality.substring(0, 200)
                    })
                });

                if (response.ok) {
                    alert('Agent zosta≈Ç stworzony pomy≈õlnie! üéâ');
                    window.location.reload();
                } else {
                    throw new Error('Failed to create agent');
                }
            } catch (error) {
                console.error('Error creating agent:', error);
                alert('WystƒÖpi≈Ç b≈ÇƒÖd podczas tworzenia agenta. Spr√≥buj ponownie.');
            }
        }

        // Agent management functions
        function editAgent(agentId) {
            window.open(`/agents/${agentId}`, '_blank');
        }

        function showAgentStats(agentId) {
            alert(`üìä Statystyki dla agenta ${agentId} bƒôdƒÖ wkr√≥tce dostƒôpne!`);
        }

        function scrollToCreator() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Update creativity level display
        document.getElementById('creativityLevel').addEventListener('input', function() {
            const value = this.value;
            let label = 'Zbalansowany';
            if (value < 30) label = 'Konserwatywny';
            else if (value > 70) label = 'Kreatywny';
            
            // Could add a display element for current value
        });
    </script>
</UniversalPageLayout>
