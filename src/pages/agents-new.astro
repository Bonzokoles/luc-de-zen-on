const pageAuthor = "Garry Kasparov";

// Fetch user-created agents
let userAgents = [];
try {
  const response = await fetch(new URL("/api/agents/list", Astro.url.origin));
  if (response.ok) {
    userAgents = await response.json();
  }
} catch (e) {
  console.error("Could not fetch user agents:", e);
}
---

<UniversalPageLayout 
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  pageQuote={pageQuote}
  pageAuthor={pageAuthor}
  showRandomQuote={false}
>
    <!-- Agent Creation Panel -->
    <GlassPanel title="ü§ñ Kreator Nowego Agenta" variant="highlight" padding="lg">
        <div style="margin-bottom: 20px;">
            <p style="color: rgba(255,255,255,0.8); font-size: 1.1rem; line-height: 1.6;">
                Stw√≥rz spersonalizowanego agenta AI dostosowanego do Twoich potrzeb. 
                Wybierz specjalizacjƒô, ustaw parametry i rozpocznij pracƒô z AI asystentem.
            </p>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px; margin-bottom: 30px;">
            
            <!-- Quick Agent Templates -->
            <div style="background: rgba(0,0,0,0.4); border: 1px solid rgba(0,217,255,0.3); border-radius: 12px; padding: 20px;">
                <h3 style="color: #00d9ff; margin-bottom: 15px;">‚ö° Szybkie szablony</h3>
                
                <div style="space-y: 10px;">
                    <button class="agent-template-btn" data-template="business" style="width: 100%; padding: 12px; background: rgba(0,217,255,0.1); border: 1px solid rgba(0,217,255,0.3); border-radius: 6px; color: white; cursor: pointer; transition: all 0.3s ease; margin-bottom: 8px;">
                        üíº Agent Biznesowy
