                    <input 
                        type="text" 
                        id="agentName" 
                        placeholder="np. M√≥j Asystent Biznesowy"
                        style="width: 100%; padding: 10px; background: rgba(0,0,0,0.6); border: 1px solid rgba(0,217,255,0.3); border-radius: 6px; color: white;"
                    />
                </div>

                <div style="margin-bottom: 15px;">
                    <label style="display: block; color: #00d9ff; font-weight: 600; margin-bottom: 8px;">Specjalizacja</label>
                    <select 
                        id="agentSpecialization"
                        style="width: 100%; padding: 10px; background: rgba(0,0,0,0.6); border: 1px solid rgba(0,217,255,0.3); border-radius: 6px; color: white;"
