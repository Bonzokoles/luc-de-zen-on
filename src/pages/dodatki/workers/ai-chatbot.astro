          </div>
          <div class="text-right text-sm text-[#b0bec5] font-mono">
            <div class="mb-1">
              STATUS: <span class="text-[#00ff88]" id="statusIndicator">ONLINE</span>
            </div>
            <div>
              MODEL: <span class="text-[#00e5ff]">GPT-4</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="relative z-20 py-12">
      <div class="max-w-4xl mx-auto px-4">
        
        <!-- Chat Container -->
        <div class="bg-[#0f3846]/60 border border-[#1be1ff]/20 rounded-lg overflow-hidden">
          
          <!-- Chat Header -->
          <div class="bg-[#0f3846]/80 border-b border-[#1be1ff]/20 p-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-[#1be1ff]/20 border border-[#1be1ff]/50 rounded-full flex items-center justify-center">
                  <span class="text-[#1be1ff] text-sm">ðŸ¤–</span>
                </div>
                <div>
                  <h3 class="text-[#e1f5fe] font-semibold">AI Assistant</h3>
                  <p class="text-[#b0bec5] text-sm">Gotowy do pomocy</p>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <button id="clearChat" class="px-3 py-1 bg-[#1be1ff]/10 border border-[#1be1ff]/30 rounded text-[#1be1ff] text-sm hover:bg-[#1be1ff]/20 transition-colors">
                  WyczyÅ›Ä‡
                </button>
                <button id="saveChat" class="px-3 py-1 bg-[#00ff88]/10 border border-[#00ff88]/30 rounded text-[#00ff88] text-sm hover:bg-[#00ff88]/20 transition-colors">
                  Zapisz
                </button>
              </div>
            </div>
          </div>

          <!-- Chat Messages -->
          <div id="chatMessages" class="h-96 overflow-y-auto p-4 space-y-4">
            <!-- Welcome Message -->
            <div class="flex items-start gap-3">
              <div class="w-8 h-8 bg-[#1be1ff]/20 border border-[#1be1ff]/50 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-[#1be1ff] text-sm">ðŸ¤–</span>
              </div>
              <div class="bg-[#1be1ff]/10 border border-[#1be1ff]/20 rounded-lg p-3 max-w-xs">
                <p class="text-[#e1f5fe] text-sm">
                  CzeÅ›Ä‡! Jestem AI Assistant. W czym mogÄ™ Ci pomÃ³c?
                </p>
              </div>
            </div>
          </div>

          <!-- Chat Input -->
          <div class="bg-[#0f3846]/80 border-t border-[#1be1ff]/20 p-4">
            <div class="flex items-center gap-3">
              <div class="flex-1 relative">
                <input 
                  type="text" 
                  id="messageInput"
                  placeholder="Wpisz swojÄ… wiadomoÅ›Ä‡..."
                  class="w-full bg-[#0a0f14]/80 border border-[#1be1ff]/30 rounded-lg px-4 py-3 text-[#e1f5fe] placeholder-[#b0bec5] focus:outline-none focus:border-[#1be1ff] transition-colors"
                  maxlength="500"
                />
                <div class="absolute right-3 top-1/2 -translate-y-1/2 text-[#b0bec5] text-xs">
                  <span id="charCount">0</span>/500
                </div>
              </div>
              <button 
                id="sendMessage"
                class="px-6 py-3 bg-[#1be1ff] text-[#0a0f14] rounded-lg font-semibold hover:bg-[#00e5ff] transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
              >
                WyÅ›lij
              </button>
            </div>
          </div>
        </div>

        <!-- Chat Stats -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-[#0f3846]/40 border border-[#1be1ff]/20 rounded-lg p-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-[#1be1ff] font-semibold mb-1">WiadomoÅ›ci</h3>
                <p class="text-2xl font-bold text-[#e1f5fe]" id="messageCount">0</p>
              </div>
              <div class="text-[#1be1ff]/60 text-2xl">ðŸ’¬</div>
            </div>
          </div>

          <div class="bg-[#0f3846]/40 border border-[#00ff88]/20 rounded-lg p-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-[#00ff88] font-semibold mb-1">Czas odpowiedzi</h3>
                <p class="text-2xl font-bold text-[#e1f5fe]" id="responseTime">~1s</p>
              </div>
              <div class="text-[#00ff88]/60 text-2xl">âš¡</div>
            </div>
          </div>

          <div class="bg-[#0f3846]/40 border border-[#ff6b35]/20 rounded-lg p-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-[#ff6b35] font-semibold mb-1">DokÅ‚adnoÅ›Ä‡</h3>
                <p class="text-2xl font-bold text-[#e1f5fe]" id="accuracy">95%</p>
              </div>
              <div class="text-[#ff6b35]/60 text-2xl">ðŸŽ¯</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    // Chat functionality
    let messageCount = 0;
    
    const chatMessages = document.getElementById('chatMessages');
    const messageInput = document.getElementById('messageInput');
    const sendButton = document.getElementById('sendMessage');
    const clearButton = document.getElementById('clearChat');
    const charCount = document.getElementById('charCount');
    const messageCountDisplay = document.getElementById('messageCount');

    // Character counter
    messageInput?.addEventListener('input', () => {
      const count = messageInput.value.length;
      if (charCount) charCount.textContent = count.toString();
    });

    // Send message
    sendButton?.addEventListener('click', sendMessage);
    messageInput?.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') sendMessage();
    });

    function sendMessage() {
      const message = messageInput?.value.trim();
      if (!message) return;

      // Add user message
      addMessage(message, 'user');
      messageInput.value = '';
      if (charCount) charCount.textContent = '0';

      // Simulate AI response
      setTimeout(() => {
        const responses = [
          "Rozumiem Twoje pytanie. MogÄ™ Ci pomÃ³c w tej sprawie.",
          "To bardzo interesujÄ…ce zagadnienie. Oto moja odpowiedÅº...",
          "Åšwietne pytanie! Oto co myÅ›lÄ™ na ten temat:",
          "DziÄ™ki za pytanie. PozwÃ³l mi to wyjaÅ›niÄ‡:",
          "To skomplikowany temat, ale postaram siÄ™ go uproÅ›ciÄ‡:"
        ];
        const randomResponse = responses[Math.floor(Math.random() * responses.length)];
        addMessage(randomResponse, 'ai');
      }, 1500);
    }

    function addMessage(text, sender) {
      if (!chatMessages) return;

      messageCount++;
      if (messageCountDisplay) messageCountDisplay.textContent = messageCount.toString();

      const messageDiv = document.createElement('div');
      messageDiv.className = 'flex items-start gap-3';

      if (sender === 'user') {
        messageDiv.innerHTML = `
          <div class="flex-1"></div>
          <div class="bg-[#00ff88]/10 border border-[#00ff88]/20 rounded-lg p-3 max-w-xs">
            <p class="text-[#e1f5fe] text-sm">${text}</p>
          </div>
          <div class="w-8 h-8 bg-[#00ff88]/20 border border-[#00ff88]/50 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-[#00ff88] text-sm">ðŸ‘¤</span>
          </div>
        `;
      } else {
        messageDiv.innerHTML = `
          <div class="w-8 h-8 bg-[#1be1ff]/20 border border-[#1be1ff]/50 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-[#1be1ff] text-sm">ðŸ¤–</span>
          </div>
          <div class="bg-[#1be1ff]/10 border border-[#1be1ff]/20 rounded-lg p-3 max-w-xs">
            <p class="text-[#e1f5fe] text-sm">${text}</p>
          </div>
        `;
      }

      chatMessages.appendChild(messageDiv);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    // Clear chat
    clearButton?.addEventListener('click', () => {
      if (chatMessages) {
        chatMessages.innerHTML = `
          <div class="flex items-start gap-3">
            <div class="w-8 h-8 bg-[#1be1ff]/20 border border-[#1be1ff]/50 rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-[#1be1ff] text-sm">ðŸ¤–</span>
            </div>
            <div class="bg-[#1be1ff]/10 border border-[#1be1ff]/20 rounded-lg p-3 max-w-xs">
              <p class="text-[#e1f5fe] text-sm">
                CzeÅ›Ä‡! Jestem AI Assistant. W czym mogÄ™ Ci pomÃ³c?
              </p>
            </div>
          </div>
        `;
      }
      messageCount = 0;
      if (messageCountDisplay) messageCountDisplay.textContent = '0';
    });
  </script>
</Layout>