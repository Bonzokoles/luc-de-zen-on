    );
  } catch (e) {
    generationHistory = [];
  }

  function parseSize(size) {
    var parts = String(size || "").split("x");
    var w = parseInt(parts[0], 10);
    var h = parseInt(parts[1], 10);
    if (isNaN(w) || isNaN(h)) {
      w = 512;
      h = 512;
    }
    return { width: w, height: h };
  }

  // Template prompts
