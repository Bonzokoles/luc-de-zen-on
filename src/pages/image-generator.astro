        <div class="border border-edge rounded-lg p-6 mt-6" style="background: rgba(0,0,0,0.5);">
          <!-- Prompt -->
          <div class="mb-5">
            <label for="imagePrompt" class="block text-lg font-semibold mb-2 text-primary-foreground">Opis obrazu</label>
