  function toggleNSFWBlur() {
    var enabled = document.getElementById('nsfwBlur').checked;
    var allImages = document.querySelectorAll('#generatedImage, .history-item img, .result-card img');
    
    allImages.forEach(function(img) {
      if (enabled && img.dataset.nsfw === 'true') {
        img.style.filter = 'blur(20px)';
        img.style.cursor = 'pointer';
        img.onclick = function() {
          this.style.filter = 'none';
          this.onclick = null;
        };
      } else {
        img.style.filter = 'none';
        img.onclick = null;
      }
    });
  }

  async function enhancedGenerateImage() {
    var btn = document.getElementById("generateBtn");
    var loading = document.getElementById("loading");
    var errorBox = document.getElementById("errorBox");
    var resultSection = document.getElementById("resultSection");
    var generatedImage = document.getElementById("generatedImage");

    if (btn) btn.disabled = true;
    if (loading) loading.classList.remove("hidden");
    if (errorBox) errorBox.classList.add("hidden");

    try {
      var generationType = document.getElementById("generationType").value;
      var prompt = document.getElementById("imagePrompt").value.trim();
      var model = document.getElementById("imageModel").value;
      var autoTranslate = document.getElementById("autoTranslate").checked;
      var nsfwBlur = document.getElementById("nsfwBlur").checked;
      
      if (!prompt) {
        throw new Error("Wprowadź prompt do generacji");
      }

      var formData = new FormData();
      formData.append('generationType', generationType);
      formData.append('prompt', prompt);
      formData.append('model', model);
      formData.append('autoTranslate', autoTranslate);
      formData.append('nsfwBlur', nsfwBlur);

      // Add specific parameters based on generation type
      if (generationType === 'image' || generationType === 'photo2photo') {
        var dims = getDimensions();
        formData.append('width', dims.width);
        formData.append('height', dims.height);
        formData.append('steps', document.getElementById("steps").value);
        
        if (generationType === 'photo2photo') {
          var sourceImage = document.getElementById('sourceImage').files[0];
          if (!sourceImage) {
            throw new Error("Wybierz obraz źródłowy dla photo2photo");
          }
          formData.append('sourceImage', sourceImage);
        }
      } else if (generationType === 'video') {
        formData.append('duration', document.getElementById('videoDuration').value);
        formData.append('fps', document.getElementById('videoFPS').value);
      }

      var response = await fetch('/api/enhanced-generator', {
        method: 'POST',
        body: formData
      });

      if (!response.ok) {
        var errorData = await response.json();
        throw new Error(errorData.error || `Server error: ${response.status}`);
      }

      var result = await response.json();
      
      if (result.success) {
        if (generatedImage && result.imageUrl) {
          generatedImage.src = result.imageUrl;
          generatedImage.dataset.nsfw = result.isNSFW ? 'true' : 'false';
          
          // Apply NSFW blur if enabled
          if (nsfwBlur && result.isNSFW) {
            generatedImage.style.filter = 'blur(20px)';
            generatedImage.style.cursor = 'pointer';
            generatedImage.onclick = function() {
              this.style.filter = 'none';
              this.onclick = null;
            };
          }
        }
        
        if (resultSection) resultSection.classList.remove("hidden");
        
        // Update generation history
        var historyItem = {
          id: Date.now(),
          prompt: result.originalPrompt || prompt,
          translatedPrompt: result.translatedPrompt,
          imageUrl: result.imageUrl || result.videoUrl || result.modelUrl,
          generationType: generationType,
          model: model,
          isNSFW: result.isNSFW,
          ts: new Date().toISOString(),
          settings: {
            model: model,
            generationType: generationType,
            autoTranslate: autoTranslate
          }
        };
        
        generationHistory.unshift(historyItem);
        if (generationHistory.length > 20) {
          generationHistory = generationHistory.slice(0, 20);
        }
        localStorage.setItem("imageHistory", JSON.stringify(generationHistory));
        updateHistoryDisplay();
        
        // Show translation info if used
        if (result.translatedPrompt && result.translatedPrompt !== prompt) {
          var translationInfo = document.getElementById('translationInfo');
          if (translationInfo) {
            translationInfo.innerHTML = 
              `<div class="bg-blue-900/20 border border-blue-500 rounded-lg p-3 mt-4">
                <h4 class="text-blue-400 font-semibold mb-2">🌐 Auto-tłumaczenie POLACZEK_T</h4>
                <p class="text-sm text-gray-300"><strong>Oryginalny:</strong> ${prompt}</p>
                <p class="text-sm text-gray-300"><strong>Przetłumaczony:</strong> ${result.translatedPrompt}</p>
              </div>`;
          }
        }
        
      } else {
        throw new Error(result.error || 'Wystąpił błąd podczas generacji');
      }

    } catch (err) {
      console.error("Enhanced generation error:", err);
      if (errorBox) {
        errorBox.textContent = err.message || String(err);
        errorBox.classList.remove("hidden");
      }
    } finally {
      if (loading) loading.classList.add("hidden");
      if (btn) {
        btn.disabled = false;
        var buttonTexts = {
          'image': '🎨 Generuj Obraz',
          'video': '🎬 Generuj Wideo',
          '3d': '🗿 Generuj Model 3D',
          'photo2photo': '🔄 Przekształć Obraz'
        };
        btn.textContent = buttonTexts[document.getElementById("generationType").value] || '🎨 Generuj';
      }
    }
  }

  // Global statistics functions
  function updateGlobalStats() {
    var totalImages = generationHistory.length;
    var todayImages = 0;
    var weekImages = 0;
    var favoriteImages = 0;
    
    var todayDate = new Date().toDateString();
    var weekAgo = new Date(Date.now() - 7 * 24 * 60 * 60 * 1000);
    
    generationHistory.forEach(function(item) {
      var itemDate = new Date(item.ts);
      if (itemDate.toDateString() === todayDate) todayImages++;
      if (itemDate >= weekAgo) weekImages++;
      if (item.favorite) favoriteImages++;
    });
    
    var totalEl = document.getElementById("statTotalImages");
    var todayEl = document.getElementById("statTodayImages");
    var weekEl = document.getElementById("statWeekImages");
    var avgEl = document.getElementById("statAvgTime");
    
    if (totalEl) totalEl.textContent = totalImages;
    if (todayEl) todayEl.textContent = todayImages;
    if (weekEl) weekEl.textContent = weekImages;
    if (avgEl) avgEl.textContent = "~3.2s"; // Updated average for multi-modal
  }

  // Initialize enhanced generator on page load
  document.addEventListener("DOMContentLoaded", function () {
    updateHistoryDisplay();
    updateGlobalStats();
    updateGenerationUI();
    
    // Replace standard generate function with enhanced version
    var generateBtn = document.getElementById("generateBtn");
    if (generateBtn) {
      generateBtn.onclick = enhancedGenerateImage;
    }
    
    // Setup generation type change handler
    var generationTypeSelect = document.getElementById("generationType");
    if (generationTypeSelect) {
      generationTypeSelect.onchange = updateGenerationUI;
    }
    
    // Setup source image upload handler
    var sourceImageInput = document.getElementById("sourceImage");
    if (sourceImageInput) {
      sourceImageInput.onchange = handleSourceImageUpload;
    }
    
    // Setup NSFW blur toggle
    var nsfwBlurToggle = document.getElementById("nsfwBlur");
    if (nsfwBlurToggle) {
      nsfwBlurToggle.onchange = toggleNSFWBlur;
    }
    
    // Setup canvas and file upload
    setupCanvas();
    setupFileUpload();
    
    // Canvas and Image Processing Functions
    function setupCanvas() {
      var canvas = document.getElementById('imageCanvas');
      if (!canvas) return;
      var ctx = canvas.getContext('2d');
      
      // Clear canvas with dark background
      ctx.fillStyle = '#1f2937';
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      
      // Add placeholder text
      ctx.fillStyle = '#9ca3af';
      ctx.font = '16px Arial';
      ctx.textAlign = 'center';
      ctx.fillText('Obraz pojawi się tutaj', canvas.width/2, canvas.height/2);
    }

    function displayImageOnCanvas(imageUrl) {
      var canvas = document.getElementById('imageCanvas');
      if (!canvas) return;
      var ctx = canvas.getContext('2d');
      var img = new Image();
      
      img.onload = function() {
        // Calculate dimensions to fit canvas while maintaining aspect ratio
        var scale = Math.min(canvas.width / img.width, canvas.height / img.height);
        var newWidth = img.width * scale;
        var newHeight = img.height * scale;
        var x = (canvas.width - newWidth) / 2;
        var y = (canvas.height - newHeight) / 2;
        
        // Clear canvas
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.fillStyle = '#1f2937';
        ctx.fillRect(0, 0, canvas.width, canvas.height);
        
        // Draw image
        ctx.drawImage(img, x, y, newWidth, newHeight);
        
        // Update image info
        var info = document.getElementById('imageInfo');
        if (info) {
          info.textContent = `Rozmiar: ${img.width}x${img.height} | Model: ${document.getElementById('imageModel').value} | Status: OK`;
        }
      };
      
      img.src = imageUrl;
    }

    // File Upload Functions
    function setupFileUpload() {
      var uploadArea = document.getElementById('uploadArea');
      var fileInput = document.getElementById('sourceImageFile');
      
      if (!uploadArea || !fileInput) return;
      
      // Click to upload
      uploadArea.addEventListener('click', function() {
        fileInput.click();
      });
      
      // Drag and drop
      uploadArea.addEventListener('dragover', function(e) {
        e.preventDefault();
        uploadArea.classList.add('border-cyan-400');
      });
      
      uploadArea.addEventListener('dragleave', function(e) {
        e.preventDefault();
        uploadArea.classList.remove('border-cyan-400');
      });
      
      uploadArea.addEventListener('drop', function(e) {
        e.preventDefault();
        uploadArea.classList.remove('border-cyan-400');
        var files = e.dataTransfer.files;
        if (files.length > 0) {
          handleFileUpload(files[0]);
        }
      });
      
      // File input change
      fileInput.addEventListener('change', function() {
        if (this.files.length > 0) {
          handleFileUpload(this.files[0]);
        }
      });
    }

    function handleFileUpload(file) {
      // Validate file
      if (!file.type.startsWith('image/')) {
        alert('Proszę wybrać plik obrazu!');
        return;
      }
      
      if (file.size > 10 * 1024 * 1024) { // 10MB
        alert('Plik jest za duży! Maksymalny rozmiar: 10MB');
        return;
      }
      
      // Show preview
      var reader = new FileReader();
      reader.onload = function(e) {
        var sourceImg = document.getElementById('sourceImg');
        var uploadPlaceholder = document.getElementById('uploadPlaceholder');
        var uploadPreview = document.getElementById('uploadPreview');
        var processingOptions = document.getElementById('imageProcessingOptions');
        
        if (sourceImg) sourceImg.src = e.target.result;
        if (uploadPlaceholder) uploadPlaceholder.classList.add('hidden');
        if (uploadPreview) uploadPreview.classList.remove('hidden');
        if (processingOptions) processingOptions.classList.remove('hidden');
      };
      reader.readAsDataURL(file);
    }

    // Global functions for HTML onclick events
    window.clearSourceImage = function() {
      var uploadPlaceholder = document.getElementById('uploadPlaceholder');
      var uploadPreview = document.getElementById('uploadPreview');
      var processingOptions = document.getElementById('imageProcessingOptions');
      var fileInput = document.getElementById('sourceImageFile');
      
      if (uploadPlaceholder) uploadPlaceholder.classList.remove('hidden');
      if (uploadPreview) uploadPreview.classList.add('hidden');
      if (processingOptions) processingOptions.classList.add('hidden');
      if (fileInput) fileInput.value = '';
    };

    window.useAsPrompt = function() {
      // Use AI to analyze the image and generate a prompt
      var sourceImg = document.getElementById('sourceImg');
      if (sourceImg && sourceImg.src) {
        alert('Funkcja analizy obrazu zostanie wkrótce dodana!');
      }
    };

    // Image Processing Functions
    window.processImage = async function(processType) {
      var fileInput = document.getElementById('sourceImageFile');
      if (!fileInput.files.length) {
        alert('Proszę najpierw wgrać obraz!');
        return;
      }
      
      var loadingEl = document.getElementById('loading');
      var errorBox = document.getElementById('errorBox');
      var resultSection = document.getElementById('processingResultSection');
      
      try {
        if (loadingEl) loadingEl.classList.remove('hidden');
        if (errorBox) errorBox.classList.add('hidden');
        
        var formData = new FormData();
        formData.append('sourceImage', fileInput.files[0]);
        formData.append('processType', processType);
        formData.append('prompt', document.getElementById('imagePrompt').value);
        
        var response = await fetch('/api/image-processing', {
          method: 'POST',
          body: formData
        });
        
        if (!response.ok) {
          throw new Error(`Server error: ${response.status}`);
        }
        
        var result = await response.json();
        
        if (result.success) {
          displayProcessingResult(result, processType);
          if (resultSection) resultSection.classList.remove('hidden');
        } else {
          throw new Error(result.error || 'Processing failed');
        }
        
      } catch (error) {
        console.error('Processing error:', error);
        if (errorBox) {
          errorBox.textContent = error.message;
          errorBox.classList.remove('hidden');
        }
      } finally {
        if (loadingEl) loadingEl.classList.add('hidden');
      }
    };

    function displayProcessingResult(result, processType) {
      var imageResult = document.getElementById('imageResult');
      var videoResult = document.getElementById('videoResult');
      var speakResult = document.getElementById('speakResult');
      
      // Hide all result types
      if (imageResult) imageResult.classList.add('hidden');
      if (videoResult) videoResult.classList.add('hidden');
      if (speakResult) speakResult.classList.add('hidden');
      
      switch (processType) {
        case 'PHOTO_2_PHOTO':
          if (result.imageUrl && imageResult) {
            document.getElementById('processedImage').src = result.imageUrl;
            imageResult.classList.remove('hidden');
            displayImageOnCanvas(result.imageUrl);
          }
          break;
        case 'PHOTO_2_VIDEO':
          if (result.videoUrl && videoResult) {
            document.getElementById('processedVideo').src = result.videoUrl;
            videoResult.classList.remove('hidden');
          }
          break;
        case 'PHOTO_2_SPEAK':
          if (result.imageUrl && result.audioUrl && speakResult) {
            document.getElementById('speakingImage').src = result.imageUrl;
            document.getElementById('speakingAudio').src = result.audioUrl;
            speakResult.classList.remove('hidden');
          }
          break;
      }
    }
  });
</script>
