---
import MyBonzoLayout from "../../layouts/MyBonzoLayout.astro";
import MarketingContentGenerator from "../../components/MarketingContentGenerator.svelte";
import DecorativeLines from "../../components/DecorativeLines.astro";
---

<MyBonzoLayout
  siteTitle="Generator treści marketingowych | AI Functions | KAROL LISSON"
>
  <DecorativeLines />

  <main class="min-h-svh relative z-10">
    <!-- Background Grid Pattern -->
    <div class="fixed inset-0 bg-[#0a0a0a]">
      <div
        class="absolute inset-0 bg-gradient-to-br from-cyan-900/20 via-black to-black"
      >
      </div>
      <div class="cyber-grid absolute inset-0"></div>
    </div>

    <!-- Header Section -->
    <section class="relative z-20 border-b border-[#333333] pt-20">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h1
              class="text-4xl md:text-5xl font-bold text-[#00ffff] mb-2 uppercase tracking-wider font-mono"
            >
              Generator treści marketingowych
            </h1>
            <p class="text-[#a0a0a0] text-lg font-['Kenyan_Coffee']">
              Automatyczne generowanie profesjonalnych treści marketingowych
              przy użyciu AI
            </p>
          </div>
          <div class="text-right text-sm text-[#a0a0a0] font-mono">
            <div class="mb-1">
              STATUS: <span class="text-[#00ffff]">ONLINE</span>
            </div>
            <div>AI MODEL: <span class="text-[#00ffff]">GEMINI/GEMMA</span></div>
          </div>
        </div>

        <!-- Navigation -->
        <div class="flex gap-4 mb-8">
          <a
            href="/"
            class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#00ffff] hover:brightness-125 transition-all duration-300 font-mono uppercase tracking-wide text-sm"
          >
            ← Powrót do głównej
          </a>
          <a
            href="/zaawansowane-funkcje-ai"
            class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#e0e0e0] hover:text-[#00ffff] hover:brightness-125 transition-all duration-300 font-mono uppercase tracking-wide text-sm"
          >
            Wszystkie funkcje AI
          </a>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="relative z-20 py-12">
      <div class="max-w-4xl mx-auto px-4">
        <!-- Marketing Content Generator Widget -->
        <MarketingContentGenerator client:visible />

        <!-- Features Description -->
        <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="p-6 bg-[#111111] border border-[#333333] glass-effect">
            <h3
              class="text-xl font-bold text-[#00ffff] mb-4 uppercase tracking-wider font-mono"
            >
              Funkcjonalności
            </h3>
            <ul class="space-y-2 text-[#e0e0e0] font-['Kenyan_Coffee']">
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">✓</span>
                Generowanie postów na social media
              </li>
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">✓</span>
                E-maile marketingowe z CTA
              </li>
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">✓</span>
                Opisy produktów dla e-commerce
              </li>
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">✓</span>
                Artykuły na blog biznesowy
              </li>
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">✓</span>
                Treści reklamowe i newslettery
              </li>
            </ul>
          </div>

          <div class="p-6 bg-[#111111] border border-[#333333] glass-effect">
            <h3
              class="text-xl font-bold text-[#00ffff] mb-4 uppercase tracking-wider font-mono"
            >
              Możliwości
            </h3>
            <ul class="space-y-2 text-[#e0e0e0] font-['Kenyan_Coffee']">
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">⚡</span>
                Natychmiastowe generowanie treści
              </li>
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">⚡</span>
                Profesjonalny ton komunikacji
              </li>
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">⚡</span>
                Automatyczne Call-to-Action
              </li>
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">⚡</span>
                Kopiowanie jednym kliknięciem
              </li>
              <li class="flex items-center gap-2">
                <span class="text-[#00ffff]">⚡</span>
                Integracja z ActivePieces
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>
</MyBonzoLayout>

<style>
  .glass-effect {
    backdrop-filter: blur(10px);
    background: rgba(17, 17, 17, 0.8);
  }

  .cyber-grid {
    background:
      linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>
