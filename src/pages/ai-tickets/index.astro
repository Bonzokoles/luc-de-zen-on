---
import MyBonzoLayout from "../../layouts/MyBonzoLayout.astro";
import DecorativeLines from "../../components/DecorativeLines.astro";
---

<title>AI Tickets System | KAROL LISSON</title>
  <meta name="description" content="Inteligentny system zarządzania zgłoszeniami z automatyczną kategoryzacją i priorytetyzacją, wspierany przez AI." />
  <DecorativeLines />

  <main class="min-h-svh relative z-10">
    <!-- Background Grid Pattern -->
    <div class="fixed inset-0 bg-[#0a0a0a]">
      <div class="absolute inset-0 bg-gradient-to-br from-cyan-900/20 via-black to-black"></div>
      <div class="cyber-grid absolute inset-0"></div>
    </div>

    <!-- Header Section -->
    <section class="relative z-20 border-b border-[#333333] pt-20">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-[#00ffff] mb-2 uppercase tracking-wider font-mono">
              AI Tickets System
            </h1>
            <p class="text-[#a0a0a0] text-lg font-['Kenyan_Coffee']">
              Inteligentne zarządzanie zgłoszeniami z automatyczną kategoryzacją i priorytetyzacją
            </p>
          </div>
          <div class="text-right text-sm text-[#a0a0a0] font-mono">
            <div class="mb-1">
              STATUS: <span class="text-[#00ffff]">ACTIVE</span>
            </div>
            <div>TICKETS: <span class="text-[#ff6699] animate-pulse">142 open</span></div>
          </div>
        </div>

        <!-- Navigation -->
        <div class="flex gap-4 mb-8">
          <a href="/" class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#00ffff] hover:brightness-125 transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            ← Powrót
          </a>
          <a href="/ai-tickets/new" class="px-4 py-2 bg-[#ff6699] text-[#0a0a0a] border border-[#ff6699] font-bold hover:brightness-125 transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            ➕ NOWE ZGŁOSZENIE
          </a>
          <a href="/ai-tickets/dashboard" class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#e0e0e0] hover:text-[#00ffff] hover:brightness-125 transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            DASHBOARD
          </a>
        </div>
      </div>
    </section>

    <!-- Feature Overview -->
    <section class="relative z-20 py-12">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300 group">
            <h3 class="text-[#00ffff] font-mono text-xl uppercase tracking-wide">Dashboard</h3>
            <p class="text-[#a0a0a0] mb-4 font-['Kenyan_Coffee']">Centralny panel zarządzania ticketami.</p>
            <a href="/ai-tickets/dashboard" class="inline-block bg-[#00ffff] text-[#0a0a0a] px-4 py-2 text-sm font-bold hover:brightness-125 transition-all duration-300 font-mono uppercase tracking-wide">
              OTWÓRZ PANEL
            </a>
          </div>
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300 group">
            <h3 class="text-[#00ffff] font-mono text-xl uppercase tracking-wide">AI Klasyfikator</h3>
            <p class="text-[#a0a0a0] mb-4 font-['Kenyan_Coffee']">Automatyczna kategoryzacja, priorytet i odpowiedzi.</p>
             <a href="/ai-tickets/new" class="inline-block bg-[#00ffff] text-[#0a0a0a] px-4 py-2 text-sm font-bold hover:brightness-125 transition-all duration-300 font-mono uppercase tracking-wide">
              TESTUJ KLASYFIKATOR
            </a>
          </div>
          <div class="bg-gradient-to-br from-[#1a1a1a] to-[#111111] border border-[#333333] p-6 rounded-sm hover:border-[#00ffff] transition-all duration-300 group">
            <h3 class="text-[#00ffff] font-mono text-xl uppercase tracking-wide">Automatyzacja</h3>
            <p class="text-[#a0a0a0] mb-4 font-['Kenyan_Coffee']">Workflow i reguły automatyczne (wkrótce).</p>
          </div>
        </div>
      </div>
    </section>

  </main>

  <style>
    .cyber-grid {
      background-image: 
        linear-gradient(rgba(0, 255, 255, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 255, 0.1) 1px, transparent 1px);
      background-size: 20px 20px;
    }
  </style>
</MyBonzoLayout>
