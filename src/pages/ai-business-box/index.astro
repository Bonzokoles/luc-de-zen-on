        updateStatus('ai-status', false);
        addChatMessage('system', 'âŒ BÅ‚Ä…d inicjalizacji systemu');
      }
    }

    // Load statistics from API
    async function loadStats() {
      try {
        const response = await fetch('/api/ai-business-box?action=stats');
        const data = await response.json();
        
        if (data.success) {
          addChatMessage('system', `ğŸ“Š ZaÅ‚adowano dane: ${data.stats.customers_count} klientÃ³w, zysk ${data.stats.profit_margin}%`);
        }
      } catch (error) {
        console.error('Failed to load stats:', error);
      }
    }

    // Load available AI models and agents
    async function loadAvailableModels() {
      try {
        const response = await fetch('/api/ai-business-box?action=models');
        const data = await response.json();
        
        if (data.success) {
          updateModelStatus('âœ… Modele zaÅ‚adowane: ' + Object.keys(data.models.cloudflare).length + ' CF + ' + Object.keys(data.models.external).length + ' zewnÄ™trzne');
