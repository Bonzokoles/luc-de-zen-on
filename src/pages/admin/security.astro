            <CyberpunkButton text="üè† Strona g≈Ç√≥wna" variant="outline" size="sm" onclick="window.location.href='/admin/'" />
            <CyberpunkButton text="üìä Dashboard" variant="outline" size="sm" onclick="window.location.href='/admin/dashboard'" />
            <CyberpunkButton text="üë• U≈ºytkownicy" variant="outline" size="sm" onclick="window.location.href='/admin/users'" />
        </div>
    </GlassPanel>

    <!-- Security Status Overview -->
    <GlassPanel title="üõ°Ô∏è Status bezpiecze≈Ñstwa" variant="warning" padding="lg">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 25px;">
            <div style="background: rgba(239,68,68,0.1); padding: 15px; border: 1px solid rgba(239,68,68,0.3); border-radius: 8px; text-align: center;">
                <div style="color: #ef4444; font-size: 2rem; font-weight: 700;" id="threatLevel">üü° MEDIUM</div>
