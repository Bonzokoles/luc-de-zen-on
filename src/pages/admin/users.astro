const pageQuote = "U≈ºytkownicy to serce ka≈ºdego systemu.";
const pageAuthor = "MyBonzo Team";
---

<UniversalPageLayout 
  pageTitle={pageTitle}
  pageDescription={pageDescription}
  pageQuote={pageQuote}
  pageAuthor={pageAuthor}
  showRandomQuote={false}
>
    <!-- Navigation -->
    <GlassPanel title="üß≠ Nawigacja" variant="info" padding="sm">
        <div style="display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
            <CyberpunkButton text="üè† Strona g≈Ç√≥wna" variant="outline" size="sm" onclick="window.location.href='/admin/'" />
            <CyberpunkButton text="üìä Dashboard" variant="outline" size="sm" onclick="window.location.href='/admin/dashboard'" />
            <CyberpunkButton text="üìà Monitoring" variant="outline" size="sm" onclick="window.location.href='/admin/monitoring'" />
        </div>
    </GlassPanel>

    <!-- User Statistics -->
    <GlassPanel title="üë• Statystyki u≈ºytkownik√≥w" variant="highlight" padding="lg">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 25px;">
            <div style="background: rgba(0,217,255,0.1); padding: 15px; border: 1px solid rgba(0,217,255,0.3); border-radius: 8px; text-align: center;">
                <div style="color: #00d9ff; font-size: 2rem; font-weight: 700;" id="totalUsers">1,247</div>
                <div style="color: rgba(255,255,255,0.7);">≈ÅƒÖczna liczba u≈ºytkownik√≥w</div>
            </div>
            <div style="background: rgba(0,217,255,0.1); padding: 15px; border: 1px solid rgba(0,217,255,0.3); border-radius: 8px; text-align: center;">
                <div style="color: #00d9ff; font-size: 2rem; font-weight: 700;" id="activeUsers">347</div>
                <div style="color: rgba(255,255,255,0.7);">Aktywni u≈ºytkownicy (24h)</div>
            </div>
            <div style="background: rgba(0,217,255,0.1); padding: 15px; border: 1px solid rgba(0,217,255,0.3); border-radius: 8px; text-align: center;">
                <div style="color: #00d9ff; font-size: 2rem; font-weight: 700;" id="newUsers">23</div>
                <div style="color: rgba(255,255,255,0.7);">Nowi u≈ºytkownicy (dzi≈õ)</div>
            </div>
            <div style="background: rgba(0,217,255,0.1); padding: 15px; border: 1px solid rgba(0,217,255,0.3); border-radius: 8px; text-align: center;">
                <div style="color: #00d9ff; font-size: 2rem; font-weight: 700;" id="bannedUsers">12</div>
                <div style="color: rgba(255,255,255,0.7);">Zablokowani u≈ºytkownicy</div>
            </div>
        </div>
    </GlassPanel>

    <!-- User Search and Filters -->
    <GlassPanel title="üîç Wyszukiwanie u≈ºytkownik√≥w" variant="default" padding="lg">
        <div style="display: grid; grid-template-columns: 1fr auto auto; gap: 15px; margin-bottom: 20px;">
            <input 
                type="text" 
                id="userSearch" 
                placeholder="Szukaj po nazwie, email, ID..."
                style="padding: 12px; background: rgba(0,0,0,0.6); border: 1px solid rgba(0,217,255,0.3); border-radius: 6px; color: white; font-size: 16px;"
                onkeyup="filterUsers()"
            />
            <select id="statusFilter" onchange="filterUsers()" style="padding: 12px; background: rgba(0,0,0,0.6); border: 1px solid rgba(0,217,255,0.3); border-radius: 6px; color: white;">
                <option value="all">Wszyscy</option>
                <option value="active">Aktywni</option>
                <option value="inactive">Nieaktywni</option>
                <option value="banned">Zablokowani</option>
            </select>
            <CyberpunkButton 
                text="üîç Szukaj" 
                variant="primary" 
                size="md"
                onclick="performSearch()"
            />
        </div>

        <div style="display: flex; gap: 10px; justify-content: center; flex-wrap: wrap;">
            <CyberpunkButton text="‚ûï Dodaj u≈ºytkownika" variant="success" size="sm" onclick="showAddUserModal()" />
            <CyberpunkButton text="üìß Wy≈õlij email masowy" variant="outline" size="sm" onclick="showBulkEmailModal()" />
            <CyberpunkButton text="üì• Eksportuj listƒô" variant="outline" size="sm" onclick="exportUserList()" />
        </div>
    </GlassPanel>

    <!-- Users List -->
    <GlassPanel title="üìã Lista u≈ºytkownik√≥w" variant="default" padding="lg">
        <div style="overflow-x: auto;">
            <table id="usersTable" style="width: 100%; border-collapse: collapse; color: white;">
                <thead>
                    <tr style="background: rgba(0,217,255,0.1); border-bottom: 1px solid rgba(0,217,255,0.3);">
                        <th style="padding: 12px; text-align: left; border-right: 1px solid rgba(0,217,255,0.2);">ID</th>
                        <th style="padding: 12px; text-align: left; border-right: 1px solid rgba(0,217,255,0.2);">Nazwa u≈ºytkownika</th>
                        <th style="padding: 12px; text-align: left; border-right: 1px solid rgba(0,217,255,0.2);">Email</th>
                        <th style="padding: 12px; text-align: left; border-right: 1px solid rgba(0,217,255,0.2);">Status</th>
                        <th style="padding: 12px; text-align: left; border-right: 1px solid rgba(0,217,255,0.2);">Ostatnia aktywno≈õƒá</th>
                        <th style="padding: 12px; text-align: left;">Akcje</th>
                    </tr>
                </thead>
                <tbody id="usersTableBody">
                    <!-- Users will be loaded here -->
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div style="display: flex; justify-content: between; align-items: center; margin-top: 20px; gap: 15px;">
            <div style="color: rgba(255,255,255,0.7);">
                Showing <span id="currentRange">1-20</span> of <span id="totalResults">1247</span> users
            </div>
            <div style="display: flex; gap: 10px;">
                <CyberpunkButton text="‚óÄ Poprzednia" variant="outline" size="sm" onclick="previousPage()" />
                <CyberpunkButton text="Nastƒôpna ‚ñ∂" variant="outline" size="sm" onclick="nextPage()" />
            </div>
        </div>
    </GlassPanel>

    <!-- Quick Actions Panel -->
    <GlassPanel title="‚ö° Szybkie akcje" variant="warning" padding="lg">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
            <div style="text-align: center;">
                <div style="font-size: 2rem; margin-bottom: 10px;">üö´</div>
                <h4 style="color: #f59e0b; margin-bottom: 10px;">Blokada masowa</h4>
                <CyberpunkButton text="ZarzƒÖdzaj blokadami" variant="warning" size="sm" onclick="showBulkBanModal()" />
            </div>
            <div style="text-align: center;">
                <div style="font-size: 2rem; margin-bottom: 10px;">üìä</div>
                <h4 style="color: #f59e0b; margin-bottom: 10px;">Analityka u≈ºytkownik√≥w</h4>
                <CyberpunkButton text="Zobacz raporty" variant="outline" size="sm" onclick="showUserAnalytics()" />
            </div>
            <div style="text-align: center;">
                <div style="font-size: 2rem; margin-bottom: 10px;">üîÑ</div>
                <h4 style="color: #f59e0b; margin-bottom: 10px;">Resetuj has≈Ça</h4>
                <CyberpunkButton text="Reset masowy" variant="warning" size="sm" onclick="showBulkPasswordReset()" />
            </div>
            <div style="text-align: center;">
                <div style="font-size: 2rem; margin-bottom: 10px;">üóëÔ∏è</div>
                <h4 style="color: #f59e0b; margin-bottom: 10px;">Usu≈Ñ nieaktywnych</h4>
                <CyberpunkButton text="Czy≈õƒá bazƒô" variant="danger" size="sm" onclick="showCleanupModal()" />
            </div>
        </div>
    </GlassPanel>

    <script>
        let currentPage = 1;
        let usersPerPage = 20;
        let allUsers = [];
        let filteredUsers = [];

        // Load real user data from API
        async function fetchRealUsers() {
            try {
                const response = await fetch('/api/admin/users', {
                    headers: {
                        'Authorization': 'Bearer HAOS77'
                    }
                });
                
                if (response.ok) {
                    const data = await response.json();
                    return data.users || [];
                } else {
                    throw new Error('API call failed');
                }
            } catch (error) {
                console.error('Failed to fetch users:', error);
                // Fallback to minimal real data structure
                return [
                    { id: 1, username: 'admin', email: 'admin@mybonzo.com', status: 'active', lastActivity: new Date().toLocaleDateString('pl-PL'), role: 'admin' },
                    { id: 2, username: 'user.demo', email: 'demo@mybonzo.com', status: 'active', lastActivity: new Date().toLocaleDateString('pl-PL'), role: 'user' }
                ];
            }
        }

        async function loadUsers() {
            if (allUsers.length === 0) {
                allUsers = await fetchRealUsers();
            }
            filteredUsers = [...allUsers];
            renderUsers();
        }

        function renderUsers() {
            const startIndex = (currentPage - 1) * usersPerPage;
            const endIndex = Math.min(startIndex + usersPerPage, filteredUsers.length);
            const usersToShow = filteredUsers.slice(startIndex, endIndex);

            const tbody = document.getElementById('usersTableBody');
            tbody.innerHTML = usersToShow.map(user => {
                const statusColor = getStatusColor(user.status);
                const statusText = getStatusText(user.status);
                
                return `
                    <tr style="border-bottom: 1px solid rgba(0,217,255,0.1); hover: background: rgba(0,217,255,0.05);">
                        <td style="padding: 12px; border-right: 1px solid rgba(0,217,255,0.1);">#${user.id}</td>
                        <td style="padding: 12px; border-right: 1px solid rgba(0,217,255,0.1);">${user.username}</td>
                        <td style="padding: 12px; border-right: 1px solid rgba(0,217,255,0.1);">${user.email}</td>
                        <td style="padding: 12px; border-right: 1px solid rgba(0,217,255,0.1);">
                            <span style="color: ${statusColor}; font-weight: 600;">${statusText}</span>
                        </td>
                        <td style="padding: 12px; border-right: 1px solid rgba(0,217,255,0.1);">${user.lastActivity}</td>
                        <td style="padding: 12px;">
                            <div style="display: flex; gap: 5px;">
                                <button onclick="editUser(${user.id})" style="background: #00d9ff; color: black; border: none; padding: 4px 8px; border-radius: 4px; font-size: 0.8rem; cursor: pointer;">‚úèÔ∏è</button>
                                <button onclick="deleteUser(${user.id})" style="background: #ef4444; color: white; border: none; padding: 4px 8px; border-radius: 4px; font-size: 0.8rem; cursor: pointer;">üóëÔ∏è</button>
                                <button onclick="viewUser(${user.id})" style="background: #22c55e; color: white; border: none; padding: 4px 8px; border-radius: 4px; font-size: 0.8rem; cursor: pointer;">üëÅÔ∏è</button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');

            // Update pagination info
            document.getElementById('currentRange').textContent = `${startIndex + 1}-${endIndex}`;
            document.getElementById('totalResults').textContent = filteredUsers.length;
        }

        function getStatusColor(status) {
            switch(status) {
                case 'active': return '#22c55e';
                case 'inactive': return '#f59e0b';
                case 'banned': return '#ef4444';
                default: return '#6b7280';
            }
        }

        function getStatusText(status) {
            switch(status) {
                case 'active': return 'Aktywny';
                case 'inactive': return 'Nieaktywny';
                case 'banned': return 'Zablokowany';
                default: return 'Nieznany';
            }
        }

        function filterUsers() {
            const searchTerm = document.getElementById('userSearch').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            
            filteredUsers = allUsers.filter(user => {
                const matchesSearch = searchTerm === '' || 
                    user.username.toLowerCase().includes(searchTerm) ||
                    user.email.toLowerCase().includes(searchTerm) ||
                    user.id.toString().includes(searchTerm);
                
                const matchesStatus = statusFilter === 'all' || user.status === statusFilter;
                
                return matchesSearch && matchesStatus;
            });
            
            currentPage = 1; // Reset to first page
            renderUsers();
        }

        function performSearch() {
            filterUsers();
        }

        function previousPage() {
            if (currentPage > 1) {
                currentPage--;
                renderUsers();
            }
        }

        function nextPage() {
            const maxPages = Math.ceil(filteredUsers.length / usersPerPage);
            if (currentPage < maxPages) {
                currentPage++;
                renderUsers();
            }
        }

        // User action functions
        function editUser(userId) {
            alert(`üöß Edytowanie u≈ºytkownika #${userId} - funkcja w przygotowaniu`);
        }

        function deleteUser(userId) {
            if (confirm(`Czy na pewno chcesz usunƒÖƒá u≈ºytkownika #${userId}?`)) {
                alert(`U≈ºytkownik #${userId} zosta≈Ç usuniƒôty (symulacja)`);
                // Here you would make API call to delete user
            }
        }

        function viewUser(userId) {
            alert(`üöß PrzeglƒÖdanie profilu u≈ºytkownika #${userId} - funkcja w przygotowaniu`);
        }

        function showAddUserModal() {
            alert('üöß Modal dodawania u≈ºytkownika w przygotowaniu...');
        }

        function showBulkEmailModal() {
            alert('üöß System wysy≈Çania email masowego w przygotowaniu...');
        }

        function exportUserList() {
            const csvContent = "ID,Username,Email,Status,Last Activity\\n" +
                filteredUsers.map(user => 
                    `${user.id},${user.username},${user.email},${user.status},${user.lastActivity}`
                ).join("\\n");
            
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `users-export-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }

        function showBulkBanModal() {
            alert('üöß System blokady masowej w przygotowaniu...');
        }

        function showUserAnalytics() {
            alert('üöß Panel analityki u≈ºytkownik√≥w w przygotowaniu...');
        }

        function showBulkPasswordReset() {
            alert('üöß System resetowania hase≈Ç w przygotowaniu...');
        }

        function showCleanupModal() {
            if (confirm('Czy na pewno chcesz usunƒÖƒá nieaktywnych u≈ºytkownik√≥w?')) {
                alert('üöß Funkcja czyszczenia bazy w przygotowaniu...');
            }
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            loadUsers();
        });
    </script>

    <style>
        /* Table hover effects */
        #usersTable tbody tr:hover {
            background: rgba(0,217,255,0.05) !important;
        }

        /* Button hover effects */
        button:hover {
            transform: translateY(-1px);
        }

        /* Search input focus effect */
        #userSearch:focus {
            border-color: #00d9ff;
            box-shadow: 0 0 0 2px rgba(0,217,255,0.2);
        }
    </style>
</UniversalPageLayout>