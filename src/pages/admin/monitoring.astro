        })
        .join("");
    }

    function refreshSystemStatus() {
      // Simulate refreshing system status
      const statuses = ["‚úÖ", "‚ö†Ô∏è", "‚ùå"];
      const colors = ["#22c55e", "#f59e0b", "#ef4444"];

      // Add some visual feedback
      const button = event.target;
