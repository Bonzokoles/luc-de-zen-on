---
import '../styles/global.css';
import { WorkflowCanvasWithProvider } from '../components/unified-ops/WorkflowCanvas';
import { Toolbar } from '../components/unified-ops/Toolbar';
import { NodePalette } from '../components/unified-ops/NodePalette';
---

<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Unified Ops | ZENON_Biznes_hub</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <style>
    body, html { margin: 0; padding: 0; height: 100%; overflow: hidden; background: #09090b; }
  </style>
</head>
<body class="dark">
  <div class="flex h-screen w-screen overflow-hidden bg-zinc-950 text-white font-sans">
    <!-- Sidebar -->
    <aside class="flex-shrink-0 z-10">
      <NodePalette client:visible />
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col min-w-0">
      <!-- Toolbar -->
      <div class="flex-shrink-0 z-10">
        <Toolbar client:visible />
      </div>
      
      <!-- Canvas -->
      <div class="flex-1 relative">
        <WorkflowCanvasWithProvider client:only="react" />
      </div>
    </main>
  </div>
</body>
</html>
