    white-space: pre-wrap;
    overflow-y: auto;
  }

  .output-placeholder {
    color: #6b7280;
    font-style: italic;
    text-align: center;
    margin-top: 4rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .api-providers-grid {
      grid-template-columns: 1fr;
    }
    
    .provider-actions {
      flex-direction: column;
    }
    
    .actions-grid {
      grid-template-columns: 1fr;
    }
    
    .stats-grid {
      grid-template-columns: 1fr;
    }
