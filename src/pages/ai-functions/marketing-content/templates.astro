---
import MyBonzoLayout from "../../../layouts/MyBonzoLayout.astro";
import DecorativeLines from "../../../components/DecorativeLines.astro";
---

<MyBonzoLayout
  siteTitle="Szablony treści marketingowych | AI Functions | KAROL LISSON"
>
  <DecorativeLines />

  <main class="min-h-svh relative z-10">
    <!-- Background Grid Pattern -->
    <div class="fixed inset-0 bg-[#0a0a0a]">
      <div class="absolute inset-0 bg-gradient-to-br from-cyan-900/20 via-black to-black"></div>
      <div class="cyber-grid absolute inset-0"></div>
    </div>

    <!-- Header Section -->
    <section class="relative z-20 border-b border-[#333333] pt-20">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-[#00ffff] mb-2 uppercase tracking-wider font-mono">
              Szablony Marketingowe
            </h1>
            <p class="text-[#a0a0a0] text-lg font-['Kenyan_Coffee']">
              Gotowe szablony i wzorce treści marketingowych
            </p>
          </div>
        </div>

        <!-- Navigation -->
        <div class="flex gap-4 mb-8">
          <a href="../marketing-content/" class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#00ffff] hover:brightness-125 transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            ← GENERATOR
          </a>
          <a href="./campaigns/" class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#a0a0a0] hover:text-[#00ffff] transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            KAMPANIE
          </a>
          <a href="./analytics/" class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#a0a0a0] hover:text-[#00ffff] transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            ANALITYKA
          </a>
        </div>
      </div>
    </section>

    <!-- Templates Grid -->
    <section class="relative z-20 py-12">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          
          <!-- Email Marketing Template -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <h3 class="text-[#00ffff] text-xl font-bold mb-3 font-mono">EMAIL MARKETING</h3>
            <p class="text-[#a0a0a0] mb-4">Szablony newsletterów, kampanii email i automatyzacji</p>
            <div class="space-y-2 text-sm">
              <div class="text-[#00ffff]">• Newsletter promocyjny</div>
              <div class="text-[#00ffff]">• Email powitalny</div>
              <div class="text-[#00ffff]">• Kampania reaktywacyjna</div>
              <div class="text-[#00ffff]">• Follow-up sprzedażowy</div>
            </div>
            <button class="w-full mt-4 px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 font-mono uppercase">
              UŻYJ SZABLONÓW
            </button>
          </div>

          <!-- Social Media Template -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <h3 class="text-[#00ffff] text-xl font-bold mb-3 font-mono">SOCIAL MEDIA</h3>
            <p class="text-[#a0a0a0] mb-4">Posty, stories i treści na platformy społecznościowe</p>
            <div class="space-y-2 text-sm">
              <div class="text-[#00ffff]">• Post promocyjny</div>
              <div class="text-[#00ffff]">• Instagram Story</div>
              <div class="text-[#00ffff]">• LinkedIn artykuł</div>
              <div class="text-[#00ffff]">• Facebook ogłoszenie</div>
            </div>
            <button class="w-full mt-4 px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 font-mono uppercase">
              UŻYJ SZABLONÓW
            </button>
          </div>

          <!-- Blog Content Template -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <h3 class="text-[#00ffff] text-xl font-bold mb-3 font-mono">TREŚCI BLOGOWE</h3>
            <p class="text-[#a0a0a0] mb-4">Artykuły, przewodniki i treści SEO</p>
            <div class="space-y-2 text-sm">
              <div class="text-[#00ffff]">• Artykuł ekspercki</div>
              <div class="text-[#00ffff]">• Przewodnik krok po kroku</div>
              <div class="text-[#00ffff]">• Lista (listicle)</div>
              <div class="text-[#00ffff]">• Case study</div>
            </div>
            <button class="w-full mt-4 px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 font-mono uppercase">
              UŻYJ SZABLONÓW
            </button>
          </div>

          <!-- Sales Copy Template -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <h3 class="text-[#00ffff] text-xl font-bold mb-3 font-mono">COPYWRITING SPRZEDAŻOWY</h3>
            <p class="text-[#a0a0a0] mb-4">Landing pages, ogłoszenia i teksty sprzedażowe</p>
            <div class="space-y-2 text-sm">
              <div class="text-[#00ffff]">• Landing page</div>
              <div class="text-[#00ffff]">• Ogłoszenie PPC</div>
              <div class="text-[#00ffff]">• Email sprzedażowy</div>
              <div class="text-[#00ffff]">• Opis produktu</div>
            </div>
            <button class="w-full mt-4 px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 font-mono uppercase">
              UŻYJ SZABLONÓW
            </button>
          </div>

          <!-- PR & Press Template -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <h3 class="text-[#00ffff] text-xl font-bold mb-3 font-mono">PR & KOMUNIKATY</h3>
            <p class="text-[#a0a0a0] mb-4">Komunikaty prasowe i materiały PR</p>
            <div class="space-y-2 text-sm">
              <div class="text-[#00ffff]">• Komunikat prasowy</div>
              <div class="text-[#00ffff]">• Media kit</div>
              <div class="text-[#00ffff]">• Biografia</div>
              <div class="text-[#00ffff]">• FAQ dla mediów</div>
            </div>
            <button class="w-full mt-4 px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 font-mono uppercase">
              UŻYJ SZABLONÓW
            </button>
          </div>

          <!-- Video Scripts Template -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <h3 class="text-[#00ffff] text-xl font-bold mb-3 font-mono">SKRYPTY WIDEO</h3>
            <p class="text-[#a0a0a0] mb-4">Scenariusze i skrypty do materiałów wideo</p>
            <div class="space-y-2 text-sm">
              <div class="text-[#00ffff]">• Skrypt eksplainery</div>
              <div class="text-[#00ffff]">• Prezentacja produktu</div>
              <div class="text-[#00ffff]">• Testimonial</div>
              <div class="text-[#00ffff]">• Tutorial/How-to</div>
            </div>
            <button class="w-full mt-4 px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 font-mono uppercase">
              UŻYJ SZABLONÓW
            </button>
          </div>

        </div>
      </div>
    </section>
  </main>
</MyBonzoLayout>

<style>
  .cyber-grid {
    background-image: 
      linear-gradient(rgba(0, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }
</style>
