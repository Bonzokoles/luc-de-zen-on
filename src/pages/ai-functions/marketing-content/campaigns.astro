---
import MyBonzoLayout from "../../../layouts/MyBonzoLayout.astro";
import DecorativeLines from "../../../components/DecorativeLines.astro";
---

<MyBonzoLayout
  siteTitle="Kampanie marketingowe | AI Functions | KAROL LISSON"
>
  <DecorativeLines />

  <main class="min-h-svh relative z-10">
    <!-- Background Grid Pattern -->
    <div class="fixed inset-0 bg-[#0a0a0a]">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-black to-black"></div>
      <div class="cyber-grid absolute inset-0"></div>
    </div>

    <!-- Header Section -->
    <section class="relative z-20 border-b border-[#333333] pt-20">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-[#00ffff] mb-2 uppercase tracking-wider font-mono">
              Kampanie Marketingowe
            </h1>
            <p class="text-[#a0a0a0] text-lg font-['Kenyan_Coffee']">
              Zarządzanie i tworzenie kompletnych kampanii marketingowych
            </p>
          </div>
          <div class="text-right text-sm text-[#a0a0a0] font-mono">
            <div class="mb-1">AKTYWNE KAMPANIE: <span class="text-[#00ff00]">3</span></div>
            <div>BUDŻET CAŁKOWITY: <span class="text-[#00ffff]">$2,400</span></div>
          </div>
        </div>

        <!-- Navigation -->
        <div class="flex gap-4 mb-8">
          <a href="../marketing-content/" class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#a0a0a0] hover:text-[#00ffff] transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            ← GENERATOR
          </a>
          <a href="./templates/" class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#a0a0a0] hover:text-[#00ffff] transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            SZABLONY
          </a>
          <a href="./analytics/" class="px-4 py-2 bg-[#111111] border border-[#333333] text-[#a0a0a0] hover:text-[#00ffff] transition-all duration-300 font-mono uppercase tracking-wide text-sm">
            ANALITYKA
          </a>
        </div>
      </div>
    </section>

    <!-- Campaign Management -->
    <section class="relative z-20 py-12">
      <div class="max-w-6xl mx-auto px-4">
        
        <!-- Create New Campaign -->
        <div class="bg-[#111111] border border-[#333333] p-6 mb-8">
          <h2 class="text-2xl font-bold text-[#00ffff] mb-4 font-mono">UTWÓRZ NOWĄ KAMPANIĘ</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <input 
              type="text" 
              placeholder="Nazwa kampanii" 
              class="bg-[#0a0a0a] border border-[#333333] text-[#e0e0e0] px-4 py-3 focus:border-[#00ffff] focus:outline-none"
            >
            <select class="bg-[#0a0a0a] border border-[#333333] text-[#e0e0e0] px-4 py-3 focus:border-[#00ffff] focus:outline-none">
              <option>Typ kampanii</option>
              <option>Email Marketing</option>
              <option>Social Media</option>
              <option>Content Marketing</option>
              <option>PPC/Ads</option>
              <option>SEO</option>
            </select>
            <input 
              type="number" 
              placeholder="Budżet (USD)" 
              class="bg-[#0a0a0a] border border-[#333333] text-[#e0e0e0] px-4 py-3 focus:border-[#00ffff] focus:outline-none"
            >
          </div>
          <button class="px-6 py-3 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 font-mono uppercase">
            UTWÓRZ KAMPANIĘ
          </button>
        </div>

        <!-- Active Campaigns -->
        <div class="space-y-6">
          <h2 class="text-2xl font-bold text-[#00ffff] mb-6 font-mono">AKTYWNE KAMPANIE</h2>
          
          <!-- Campaign 1 -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold text-[#00ffff] mb-2 font-mono">KAMPANIA ŚWIĄTECZNA 2025</h3>
                <p class="text-[#a0a0a0] mb-2">Email Marketing + Social Media</p>
                <div class="flex gap-4 text-sm">
                  <span class="text-[#00ff00]">Status: AKTYWNA</span>
                  <span class="text-[#a0a0a0]">Start: 01.12.2025</span>
                  <span class="text-[#a0a0a0]">Koniec: 31.12.2025</span>
                </div>
              </div>
              <div class="text-right">
                <div class="text-[#00ffff] font-bold text-lg">$800</div>
                <div class="text-[#a0a0a0] text-sm">z $1,200 budżetu</div>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
              <div class="bg-[#0a0a0a] border border-[#333333] p-3">
                <div class="text-[#00ffff] font-bold">2,847</div>
                <div class="text-[#a0a0a0] text-sm">Otwarcia email</div>
              </div>
              <div class="bg-[#0a0a0a] border border-[#333333] p-3">
                <div class="text-[#00ffff] font-bold">418</div>
                <div class="text-[#a0a0a0] text-sm">Kliknięcia</div>
              </div>
              <div class="bg-[#0a0a0a] border border-[#333333] p-3">
                <div class="text-[#00ffff] font-bold">67</div>
                <div class="text-[#a0a0a0] text-sm">Konwersje</div>
              </div>
              <div class="bg-[#0a0a0a] border border-[#333333] p-3">
                <div class="text-[#00ffff] font-bold">14.7%</div>
                <div class="text-[#a0a0a0] text-sm">CTR</div>
              </div>
            </div>
            
            <div class="flex gap-2">
              <button class="px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 text-sm uppercase">
                EDYTUJ
              </button>
              <button class="px-4 py-2 bg-[#333333] text-[#e0e0e0] hover:brightness-110 transition-all duration-300 text-sm uppercase">
                RAPORT
              </button>
              <button class="px-4 py-2 bg-[#ff3333] text-white hover:brightness-110 transition-all duration-300 text-sm uppercase">
                ZATRZYMAJ
              </button>
            </div>
          </div>

          <!-- Campaign 2 -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold text-[#00ffff] mb-2 font-mono">LEAD GENERATION Q4</h3>
                <p class="text-[#a0a0a0] mb-2">PPC + Content Marketing</p>
                <div class="flex gap-4 text-sm">
                  <span class="text-[#00ff00]">Status: AKTYWNA</span>
                  <span class="text-[#a0a0a0]">Start: 15.10.2025</span>
                  <span class="text-[#a0a0a0]">Koniec: 15.01.2026</span>
                </div>
              </div>
              <div class="text-right">
                <div class="text-[#00ffff] font-bold text-lg">$600</div>
                <div class="text-[#a0a0a0] text-sm">z $900 budżetu</div>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
              <div class="bg-[#0a0a0a] border border-[#333333] p-3">
                <div class="text-[#00ffff] font-bold">1,234</div>
                <div class="text-[#a0a0a0] text-sm">Kliknięcia ads</div>
              </div>
              <div class="bg-[#0a0a0a] border border-[#333333] p-3">
                <div class="text-[#00ffff] font-bold">89</div>
                <div class="text-[#a0a0a0] text-sm">Leady</div>
              </div>
              <div class="bg-[#0a0a0a] border border-[#333333] p-3">
                <div class="text-[#00ffff] font-bold">23</div>
                <div class="text-[#a0a0a0] text-sm">Kvalified leads</div>
              </div>
              <div class="bg-[#0a0a0a] border border-[#333333] p-3">
                <div class="text-[#00ffff] font-bold">$26.09</div>
                <div class="text-[#a0a0a0] text-sm">CPA</div>
              </div>
            </div>
            
            <div class="flex gap-2">
              <button class="px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 text-sm uppercase">
                EDYTUJ
              </button>
              <button class="px-4 py-2 bg-[#333333] text-[#e0e0e0] hover:brightness-110 transition-all duration-300 text-sm uppercase">
                RAPORT
              </button>
              <button class="px-4 py-2 bg-[#ff3333] text-white hover:brightness-110 transition-all duration-300 text-sm uppercase">
                ZATRZYMAJ
              </button>
            </div>
          </div>

          <!-- Campaign 3 -->
          <div class="bg-[#111111] border border-[#333333] p-6 hover:border-[#00ffff] transition-all duration-300">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold text-[#00ffff] mb-2 font-mono">BRAND AWARENESS SOCIAL</h3>
                <p class="text-[#a0a0a0] mb-2">Social Media + Influencer Marketing</p>
                <div class="flex gap-4 text-sm">
                  <span class="text-[#ffaa00]">Status: PLANOWANA</span>
                  <span class="text-[#a0a0a0]">Start: 05.01.2026</span>
                  <span class="text-[#a0a0a0]">Koniec: 05.03.2026</span>
                </div>
              </div>
              <div class="text-right">
                <div class="text-[#00ffff] font-bold text-lg">$0</div>
                <div class="text-[#a0a0a0] text-sm">z $500 budżetu</div>
              </div>
            </div>
            
            <div class="mb-4">
              <div class="text-[#a0a0a0] mb-2">Kampania w fazie planowania:</div>
              <ul class="space-y-1 text-sm text-[#00ffff]">
                <li>• Identyfikacja influencerów</li>
                <li>• Przygotowanie creativów</li>
                <li>• Harmonogram publikacji</li>
                <li>• Strategia hashtagów</li>
              </ul>
            </div>
            
            <div class="flex gap-2">
              <button class="px-4 py-2 bg-[#00ffff] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 text-sm uppercase">
                EDYTUJ
              </button>
              <button class="px-4 py-2 bg-[#00ff00] text-[#0a0a0a] font-bold hover:brightness-110 transition-all duration-300 text-sm uppercase">
                URUCHOM
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</MyBonzoLayout>

<style>
  .cyber-grid {
    background-image: 
      linear-gradient(rgba(128, 0, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(128, 0, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }
</style>
