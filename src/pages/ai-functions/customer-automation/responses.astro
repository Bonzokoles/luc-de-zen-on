    .slider::-webkit-slider-thumb {
      appearance: none;
      height: 20px;
      width: 20px;
      background: #00ffff;
      cursor: pointer;
      border-radius: 50%;
    }

    .slider::-moz-range-thumb {
      height: 20px;
      width: 20px;
      background: #00ffff;
      cursor: pointer;
      border-radius: 50%;
