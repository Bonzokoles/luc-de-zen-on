---
// ZENON Unified Dashboard Component
// Wszystkie zasoby embedded lokalnie dla stabilnoci
import dashboardCSS from './dashboard-styles.css?raw';
import dashboardJS from './dashboard-functions.js?raw';
---

<div class="zenon-dashboard-wrapper">
    <div class="unified-header">
        <h1> ZENON Unified Dashboard System</h1>
        <p>Zintegrowany system zarzdzania wszystkimi komponentami ZENON AI</p>
    </div>
    
    <div class="keyboard-shortcuts">
        <span class="shortcut">F1 - Pomoc</span>
        <span class="shortcut">1 - Jimbo Chat</span>
        <span class="shortcut">2 - Video Dashboard</span>
        <span class="shortcut">3 - Chatbox</span>
        <span class="shortcut">4 - Agent Dashboard</span>
        <span class="shortcut">5 - Master Dashboard</span>
        <span class="shortcut">ESC - Powr贸t</span>
    </div>
    
    <div class="dashboard-container">
        <div class="sidebar">
            <h3>Л Nawigacja</h3>
            <button class="nav-item" onclick="loadDashboard('jimbo')"> Jimbo Chat</button>
            <button class="nav-item" onclick="loadDashboard('video')"> Video Dashboard</button>
            <button class="nav-item" onclick="loadDashboard('chatbox')"> Chatbox</button>
            <button class="nav-item" onclick="loadDashboard('agent')"> Agent Dashboard</button>
            <button class="nav-item" onclick="loadDashboard('master')"> Master Dashboard</button>
            
            <h3 style="margin-top: 2rem;"> Cloudflare</h3>
            <button class="nav-item" onclick="showCloudflarePanel()"> Cloudflare Status</button>
            <button class="nav-item" onclick="deployToStaging()">И Deploy to Staging</button>
            <button class="nav-item" onclick="deployToProduction()"> Deploy to Production</button>
            <button class="nav-item" onclick="testCloudflareEndpoints()">И Test Endpoints</button>
            <button class="nav-item" onclick="showWorkerLogs()"> Worker Logs</button>
            
            <h3 style="margin-top: 2rem;">锔 System</h3>
            <button class="nav-item" onclick="openHealthCheck()">┖ Health Check</button>
            <button class="nav-item" onclick="openPORReceiver()"> POR Receiver</button>
            <button class="nav-item" onclick="openCloudflareAI()"> Cloudflare AI Service</button>
        </div>
        
        <div class="content-area" id="contentArea">
            <div class="welcome-screen">
                <h2>Witaj w ZENON Unified Dashboard</h2>
                <p>Wybierz dashboard z menu po lewej stronie lub u偶yj klawiszy funkcyjnych do szybkiego dostpu.</p>
                
                <div class="system-status">
                    <div class="status-card">
                        <h4>Status Systemu</h4>
                        <p id="systemStatus">Sprawdzanie...</p>
                    </div>
                    <div class="status-card">
                        <h4>Aktywne Usugi</h4>
                        <p id="activeServices">adowanie...</p>
                    </div>
                    <div class="status-card">
                        <h4>Ostatnia Aktywno</h4>
                        <p id="lastActivity">Brak danych</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="hotkey-info">
        <h4> Skr贸ty Klawiaturowe</h4>
        <p>F1-F12: Szybki dostp do dashboard贸w</p>
        <p>ESC: Powr贸t do menu g贸wnego</p>
        <p>Ctrl+Q: Zamknij aktywny dashboard</p>
    </div>
</div>

<style set:html={dashboardCSS}></style>
<script set:html={dashboardJS}></script>