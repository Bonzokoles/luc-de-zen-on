---
import Layout from '../../../layouts/Layout.astro';
import AgentComponent from './component.svelte';
import { AGENT_CONFIG } from './config';
---

<Layout 
  title={AGENT_CONFIG.name + ' - MEGA SITE'} 
  theme="cyberpunk"
>
  <!-- Agent Page Header -->
  <section class="py-12 bg-gradient-to-br from-cyan-900/20 via-black to-purple-900/20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <div class="text-6xl mb-6" style={`color: ${AGENT_CONFIG.ui.color}`}>
          {AGENT_CONFIG.ui.icon}
        </div>
        <h1 class="text-5xl font-bold text-cyan-400 mb-6">
          {AGENT_CONFIG.name}
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8">
          {AGENT_CONFIG.description}
        </p>
        <div class="flex justify-center items-center gap-4">
          <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-green-400 font-mono text-sm">
            STATUS: {AGENT_CONFIG.status.toUpperCase()}
          </span>
          <span class="text-cyan-400 font-mono text-sm">
            v{AGENT_CONFIG.version}
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Agent Interface -->
  <section class="py-8 bg-black/20">
    <div class="max-w-4xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Full Interface -->
        <div>
          <h2 class="text-2xl font-bold text-cyan-400 mb-4">üéõÔ∏è Agent Interface</h2>
          <AgentComponent client:load variant="full" />
        </div>
        
        <!-- Agent Information -->
        <div>
          <h2 class="text-2xl font-bold text-cyan-400 mb-4">üìã Agent Details</h2>
          <div class="bg-glass rounded-xl p-6 border border-cyan-500/30">
            <div class="space-y-4">
              <div class="flex justify-between">
                <span class="text-gray-300">Agent ID:</span>
                <span class="text-cyan-400 font-mono">{AGENT_CONFIG.id}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-300">Version:</span>
                <span class="text-cyan-400 font-mono">{AGENT_CONFIG.version}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-300">Status:</span>
                <span class="text-green-400 font-mono">{AGENT_CONFIG.status}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-300">API Endpoint:</span>
                <span class="text-cyan-400 font-mono text-sm">{AGENT_CONFIG.api.endpoint}</span>
              </div>
              <div>
                <span class="text-gray-300">Capabilities:</span>
                <div class="flex flex-wrap gap-2 mt-2">
                  {AGENT_CONFIG.capabilities.map(cap => (
                    <span class="bg-cyan-500/20 text-cyan-400 px-2 py-1 rounded text-sm">
                      {cap}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Compact Demo -->
  <section class="py-8 bg-black/30">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-cyan-400 mb-4 text-center">üéÆ Interface Variants</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Compact Variant -->
        <div>
          <h3 class="text-lg font-bold text-white mb-4">Compact</h3>
          <AgentComponent client:load variant="compact" />
        </div>
        
        <!-- Floating Variant -->
        <div>
          <h3 class="text-lg font-bold text-white mb-4">Floating</h3>
          <div class="flex justify-center">
            <AgentComponent client:load variant="floating" />
          </div>
        </div>
        
        <!-- Disabled State -->
        <div>
          <h3 class="text-lg font-bold text-white mb-4">Disabled</h3>
          <AgentComponent client:load variant="compact" disabled={true} />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .bg-glass {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }
</style>
