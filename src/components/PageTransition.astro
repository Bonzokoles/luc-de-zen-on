---
export interface Props {
  key?: string;
}

const { key } = Astro.props;
---

<div data-key={key} class="page-transition">
  <slot />
</div>

<style>
.page-transition {
  animation: fadeIn 300ms ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
</style>