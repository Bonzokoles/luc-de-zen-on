<style>
  .streamline-icons-showcase {
    padding: 2rem;
    background: rgba(0,0,0,0.8);
    border-radius: 10px;
    margin: 2rem 0;
  }

  .streamline-icons-showcase h2 {
    color: #00bcd4;
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }

  .icons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    background: rgba(255,255,255,0.05);
    border-radius: 8px;
    transition: transform 0.2s ease;
  }

  .icon-item:hover {
    transform: translateY(-5px);
    background: rgba(255,255,255,0.1);
  }

  .icon {
    width: 32px;
    height: 32px;
    color: #00bcd4;
    margin-bottom: 0.5rem;
  }

  .icon-item span {
    font-size: 0.8rem;
    color: #d1d5db;
    text-align: center;
  }
</style>
