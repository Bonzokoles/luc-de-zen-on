---
import Section from "./Section.astro";
import Arrow from "../components/Arrow.astro";

import { USER_SOCIALS, USER_EMAIL } from "../data/user-contact";
import { USER_NAME } from "../data/user-personal";
---

<Section class='py-16' />
<Section class='flex flex-row'>
	<a class="hover:text-white" href="/"><h1 class="text-5xl">{ USER_NAME }</h1></a>

	<!-- USER CONTACT -->
	<div class="flex flex-col ml-auto">
		<a class="ml-auto hover:text-white duration-200" href={`mailto:${ USER_EMAIL }`}>{ USER_EMAIL }<Arrow rotate={-45} /></a>
		<div class="flex flex-row-reverse flex-wrap gap-2">
			{ 
				USER_SOCIALS.map((social) => (
					<a class="hover:text-white duration-200" href={social.href}>{social.title}<Arrow rotate={-45} /></a>
				))
			}
		</div>
	</div>
</Section>