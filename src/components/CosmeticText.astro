---
interface Props {
    text: string;
    vertical?: boolean;
}

const { text, vertical = false } = Astro.props;
---

<span style={vertical ? "writing-mode: vertical-rl;" : ""} class="block text-clip overflow-hidden px-2 text-xl tracking-[0.3em] text-primary-border font-semibold">
    {text}
</span>