---
interface Props {
    name: string;
}

const { name } = Astro.props;
---

<label class="grid grid-cols-[0fr] has-checked:grid-cols-[1fr] duration-200">
    <input type="radio" name={name} class="peer hidden">
    <div class="flex flex-row">
        <slot name="label" />
        <div class="overflow-hidden">
            <slot />
        </div>
    </div>
</label>