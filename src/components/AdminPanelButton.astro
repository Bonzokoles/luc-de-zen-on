---
const onAdmin = Astro.url.pathname.startsWith("/admin");
---

{
  !onAdmin && (
    <a
      href="/admin/"
      class="admin-fab"
      aria-label="Otworz panel administracyjny"
    >
      ADMIN
    </a>
  )
}

<style>
  .admin-fab {
    position: fixed;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    writing-mode: vertical-rl;
    text-orientation: mixed;
    background: rgba(0, 0, 0, 0.85);
    color: #00e7ff;
    border: 2px solid #8b0000;
    padding: 10px 8px;
    text-decoration: none;
    font-weight: 700;
    letter-spacing: 0.1em;
    z-index: 9999;
    box-shadow: 0 0 18px rgba(139, 0, 0, 0.35);
    transition:
      transform 0.15s ease,
      box-shadow 0.2s ease,
      border-color 0.2s ease;
  }
  .admin-fab:hover {
    border-color: #00e7ff;
    box-shadow: 0 0 24px rgba(0, 231, 255, 0.4);
    transform: translateY(-50%) scale(1.03);
  }
  @media (max-width: 640px) {
    .admin-fab {
      right: 8px;
      padding: 8px 6px;
    }
  }
</style>

