---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Stable Diffusion Generator z cyberpunk stylingiem"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/scifi-enhanced.css" />
    <link rel="stylesheet" href="/src/styles/backroom-theme.css" />
    <title>{title}</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        padding-top: 80px; /* Space for floating banner */
        min-height: 100vh;
        background: linear-gradient(
          to bottom right,
          #000000 0%,
          #001400 15%,
          #020a02 25%,
          #0a1a0a 50%,
          #020a02 75%,
          #001400 85%,
          #000000 100%
        );
        background-attachment: fixed;
        font-family: "Rajdhani", sans-serif;
        color: #e5e5e5;
        overflow-x: hidden;
        font-size: 120%; /* Increase all text by 20% */
      }

      /* Floating banner space */
      .floating-banner-space {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 80px;
        background: linear-gradient(
          135deg,
          rgba(0, 0, 0, 0.9) 0%,
          rgba(20, 20, 20, 0.8) 100%
        );
        border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(15px);
        z-index: 1000;
      }

      /* White decorative lines */
      .floating-banner-space::before {
        content: "";
        position: absolute;
        top: 20px;
        left: 20px;
        right: 20px;
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent 0%,
          rgba(255, 255, 255, 0.8) 20%,
          rgba(255, 255, 255, 0.4) 50%,
          rgba(255, 255, 255, 0.8) 80%,
          transparent 100%
        );
      }

      .floating-banner-space::after {
        content: "";
        position: absolute;
        bottom: 20px;
        left: 20px;
        right: 20px;
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent 0%,
          rgba(255, 255, 255, 0.6) 30%,
          rgba(255, 255, 255, 0.2) 50%,
          rgba(255, 255, 255, 0.6) 70%,
          transparent 100%
        );
      }

      /* Thematic sections with frames and 30% black fill */
      .glossy-black {
        background: linear-gradient(
          135deg,
          rgba(0, 0, 0, 0.3) 0%,
          rgba(10, 10, 10, 0.4) 50%,
          rgba(0, 0, 0, 0.3) 100%
        );
        border: 2px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(20px);
        box-shadow:
          inset 0 2px 0 rgba(255, 255, 255, 0.15),
          0 8px 32px rgba(0, 0, 0, 0.8),
          0 0 0 2px rgba(255, 255, 255, 0.1);
      }

      .glossy-black:hover {
        border-color: rgba(255, 255, 255, 0.4);
        background: linear-gradient(
          135deg,
          rgba(0, 0, 0, 0.4) 0%,
          rgba(10, 10, 10, 0.5) 50%,
          rgba(0, 0, 0, 0.4) 100%
        );
        box-shadow:
          inset 0 2px 0 rgba(255, 255, 255, 0.2),
          0 12px 48px rgba(0, 0, 0, 0.9),
          0 0 0 2px rgba(0, 255, 255, 0.4);
        transform: translateY(-2px);
      }

      /* Cyber Grid Background */
      .cyber-bg {
        background: radial-gradient(
            circle at 20% 80%,
            rgba(0, 255, 255, 0.03) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 80% 20%,
            rgba(255, 0, 255, 0.03) 0%,
            transparent 50%
          ),
          repeating-linear-gradient(
            45deg,
            transparent,
            transparent 2px,
            rgba(255, 255, 255, 0.01) 2px,
            rgba(255, 255, 255, 0.01) 4px
          );
      }

      /* Neon accents */
      .neon-cyan {
        color: #00ffff;
        text-shadow:
          0 0 5px #00ffff,
          0 0 10px #00ffff,
          0 0 15px #00ffff;
      }

      .neon-magenta {
        color: #ff00ff;
        text-shadow:
          0 0 5px #ff00ff,
          0 0 10px #ff00ff;
      }

      .neon-white {
        color: #ffffff;
        text-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
      }

      /* Glossy buttons with 60% transparent black backgrounds */
      .btn-glossy-black {
        background: rgba(0, 0, 0, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #ffffff;
        backdrop-filter: blur(10px);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
      }

      .btn-glossy-black:hover {
        background: rgba(0, 0, 0, 0.8);
        border-color: rgba(0, 255, 255, 0.5);
        box-shadow:
          0 0 20px rgba(0, 255, 255, 0.3),
          0 0 0 1px rgba(0, 255, 255, 0.4);
        transform: translateY(-1px);
      }

      /* Main frame containers for square layout */
      .main-frame {
        background: rgba(0, 0, 0, 0.3);
        border: 2px solid rgba(255, 255, 255, 0.4);
        border-radius: 12px;
        padding: 24px;
        backdrop-filter: blur(20px);
        box-shadow:
          inset 0 2px 0 rgba(255, 255, 255, 0.1),
          0 8px 32px rgba(0, 0, 0, 0.6);
        aspect-ratio: 1;
        display: flex;
        flex-direction: column;
      }

      .main-frame:hover {
        border-color: rgba(255, 255, 255, 0.5);
        box-shadow:
          inset 0 2px 0 rgba(255, 255, 255, 0.15),
          0 12px 48px rgba(0, 0, 0, 0.8);
      }

      /* Simple square divided vertically */
      .square-grid {
        max-width: 800px;
        margin: 0 auto;
        aspect-ratio: 1;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
      }

      .square-half {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      /* Input fields with frames */
      .input-glossy {
        background: linear-gradient(
          135deg,
          rgba(15, 15, 15, 0.95) 0%,
          rgba(8, 8, 8, 0.98) 100%
        );
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: #ffffff;
        backdrop-filter: blur(5px);
        box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.05);
      }

      .input-glossy:focus {
        border-color: rgba(0, 255, 255, 0.5);
        box-shadow:
          0 0 15px rgba(0, 255, 255, 0.2),
          0 0 0 1px rgba(0, 255, 255, 0.3);
        outline: none;
      }

      /* Transitions */
      .transition-glossy {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* Loading animation */
      .loading-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
      }

      /* Sci-fi typography */
      .sci-fi-type {
        font-family: "Rajdhani", sans-serif;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
      }

      /* Sci-fi button styles */
      .scifi-btn {
        background: linear-gradient(
          135deg,
          rgba(0, 255, 255, 0.1) 0%,
          rgba(0, 255, 255, 0.05) 50%,
          rgba(0, 255, 255, 0.1) 100%
        );
        border: 1px solid rgba(0, 255, 255, 0.4);
        color: #00ffff;
        font-family: "Rajdhani", sans-serif;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        backdrop-filter: blur(10px);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 0 0 1px rgba(0, 255, 255, 0.2);
      }

      .scifi-btn:hover {
        background: linear-gradient(
          135deg,
          rgba(0, 255, 255, 0.2) 0%,
          rgba(0, 255, 255, 0.1) 50%,
          rgba(0, 255, 255, 0.2) 100%
        );
        border-color: rgba(0, 255, 255, 0.6);
        box-shadow:
          0 0 20px rgba(0, 255, 255, 0.3),
          0 0 0 1px rgba(0, 255, 255, 0.4);
        transform: translateY(-1px);
      }

      .scifi-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
      }

      /* Panel styles */
      .panel {
        background: rgba(0, 0, 0, 0.3);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        padding: 20px;
        backdrop-filter: blur(20px);
        box-shadow:
          inset 0 2px 0 rgba(255, 255, 255, 0.1),
          0 8px 32px rgba(0, 0, 0, 0.6);
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
