## 2. BACKEND - NODE.JS / HONO

### File: `src/routes/chat.ts`

```typescript
import { Hono } from 'hono';
import { stream } from 'hono/streaming';
import { GoogleGenerativeAI } from '@google/generative-ai';

const router = new Hono();
const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY || '');

interface Message {
  role: 'user' | 'model';
  parts: [{ text: string }];
}

// POST /api/v1/chat/messages
router.post('/messages', async (c) => {
  try {
    const { conversationId, message } = await c.req.json();

    // Get conversation history from database
    // For demo, using in-memory
    const conversationHistory: Message[] = [
      {
        role: 'user',
        parts: [{ text: 'Halo, czym siÄ™ zajmujesz?' }]
      },
      {
        role: 'model',
        parts: [{ text: 'Jestem asystentem AI tutaj do pomocy!' }]
      }
    ];

    conversationHistory.push({
      role: 'user',
      parts: [{ text: message }]
    });

    // Initialize Gemini
    const model = genAI.getGenerativeModel({ model: 'gemini-2.0-flash' });
    const chat = model.startChat({
      history: conversationHistory,
      generationConfig: {
        maxOutputTokens: 2048,
      }
    });

    // Stream response
    return stream(c, async (writer) => {
      try {
        const result = await chat.sendMessageStream(message);

        for await (const chunk of result.stream) {
          const text = chunk.text();
          await writer.write(text);
        }
      } catch (error) {
        console.error('Stream error:', error);
        await writer.write(`[ERROR] ${error}`);
      }
    });
  } catch (error) {
    console.error('Chat error:', error);
    return c.json({ error: 'Chat error' }, 500);
  }
});

// GET /api/v1/chat/conversations/:id
router.get('/conversations/:id', async (c) => {
  const id = c.req.param('id');
  
  // Fetch from database
  const conversation = {
    id,
    messages: [],
    createdAt: new Date()
  };

  return c.json(conversation);
});

export default router;
```

### File: `src/routes/imageGeneration.ts`

```typescript
import { Hono } from 'hono';
import Replicate from 'replicate';

const router = new Hono();
const replicate = new Replicate({
  auth: process.env.REPLICATE_API_TOKEN,
});

// POST /api/v1/generation/text-to-image
router.post('/text-to-image', async (c) => {
  try {
    const { prompt, model = 'flux-pro', aspectRatio = '1:1' } = await c.req.json();

    if (!prompt) {
      return c.json({ error: 'Prompt is required' }, 400);
    }

    // Call Flux via Replicate
    const output = await replicate.run(
      'black-forest-labs/flux-pro',
      {
        input: {
          prompt,
          aspect_ratio: aspectRatio,
          steps: 25,
          guidance: 3
        }
      }
    );

    // Save to database
    const imageUrl = Array.isArray(output) ? output[0] : output;

    return c.json({
      id: Date.now().toString(),
      prompt,
      model,
      imageUrl,
      createdAt: new Date()
    });
  } catch (error) {
    console.error('Generation error:', error);
    return c.json({ error: 'Generation failed' }, 500);
  }
});

// GET /api/v1/generation/history
router.get('/history', async (c) => {
  try {
    // Fetch from database
    const generations = [
      {
        id: '1',
        prompt: 'A beautiful sunset over mountains',
        imageUrl: 'https://...',
        createdAt: new Date()
      }
    ];

    return c.json(generations);
  } catch (error) {
    return c.json({ error: 'Fetch failed' }, 500);
  }
});

export default router;
```

### File: `src/routes/content.ts`

```typescript
import { Hono } from 'hono';
import { GoogleGenerativeAI } from '@google/generative-ai';

const router = new Hono();
const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY || '');

const CONTENT_TEMPLATES = {
  blog: {
    systemPrompt: 'You are a professional blog writer. Write engaging, SEO-optimized blog posts in Polish.',
    template: 'Write a blog post about: {topic}. Length: ~1500 words. Structure: Title, Introduction, 3-4 main sections, Conclusion.'
  },
  social: {
    systemPrompt: 'You are a social media expert. Create catchy, engaging posts for social media platforms.',
    template: 'Write 5 different social media posts about: {topic}. Include hashtags and emojis. Format for different platforms.'
  },
  email: {
    systemPrompt: 'You are an email marketing specialist. Write professional, conversion-focused emails.',
    template: 'Write a marketing email about: {topic}. Include: subject line, greeting, body (3 sections), CTA, signature.'
  },
  product_description: {
    systemPrompt: 'You are an e-commerce copywriter. Write compelling product descriptions.',
    template: 'Write a product description for: {product}. Include: features, benefits, unique selling points, call to action.'
  }
};

// POST /api/v1/content/generate
router.post('/generate', async (c) => {
  try {
    const { templateType, topic, language = 'pl' } = await c.req.json();

    if (!templateType || !topic) {
      return c.json({ error: 'Template type and topic are required' }, 400);
    }

    const template = CONTENT_TEMPLATES[templateType as keyof typeof CONTENT_TEMPLATES];
    if (!template) {
      return c.json({ error: 'Invalid template type' }, 400);
    }

    const model = genAI.getGenerativeModel({ 
      model: 'gemini-2.0-flash',
      systemInstruction: template.systemPrompt
    });

    const prompt = template.template.replace('{topic}', topic).replace('{product}', topic);

    const result = await model.generateContent(prompt);
    const content = result.response.text();

    return c.json({
      id: Date.now().toString(),
      templateType,
      topic,
      content,
      language,
      createdAt: new Date()
    });
  } catch (error) {
    console.error('Content generation error:', error);
    return c.json({ error: 'Generation failed' }, 500);
  }
});

// GET /api/v1/content/templates
router.get('/templates', (c) => {
  const templates = Object.keys(CONTENT_TEMPLATES).map(key => ({
    id: key,
    name: key.replace(/_/g, ' ').toUpperCase(),
    description: `Template for ${key.replace(/_/g, ' ')}`
  }));

  return c.json(templates);
});

export default router;
```

