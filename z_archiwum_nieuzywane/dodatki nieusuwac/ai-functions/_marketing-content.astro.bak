  let generatedContent = null;

  // Interactive lighting system
  function increaseActivity() {
    activityLevel = Math.min(activityLevel + 1, 10);
    updateLighting();
    
    setTimeout(() => {
      activityLevel = Math.max(activityLevel - 1, 0);
      updateLighting();
    }, 3000);
  }

  function updateLighting() {
    const mainContent = document.getElementById('mainContent');
    const section = document.getElementById('marketing-section');
    
    if (activityLevel >= 7) {
      mainContent.className = 'min-h-svh interactive-page highly-active';
      section.className = 'marketing-section flex items-center justify-center py-16 highly-active';
    } else if (activityLevel >= 3) {
      mainContent.className = 'min-h-svh interactive-page active';
      section.className = 'marketing-section flex items-center justify-center py-16 active';
    } else {
      mainContent.className = 'min-h-svh interactive-page';
      section.className = 'marketing-section flex items-center justify-center py-16';
    }
  }

  // Content type selection
  function selectContentType(type) {
    selectedContentType = type;
    
    // Update UI
    document.querySelectorAll('.content-type-card').forEach(card => {
      card.classList.remove('active');
      if (card.dataset.type === type) {
        card.classList.add('active');
      }
    });
    
    increaseActivity();
    console.log('Selected content type:', type);
  }

  // Generate marketing content
  async function generateMarketingContent() {
    increaseActivity();
    
    const brandInfo = document.getElementById('brandInfo').value.trim();
    const campaignObjective = document.getElementById('campaignObjective').value;
    const targetAudience = document.getElementById('targetAudience').value.trim();
    const communicationTone = document.getElementById('communicationTone').value;
    const contentLength = document.getElementById('contentLength').value;
    const keywords = document.getElementById('keywords').value.trim();
    
    if (!brandInfo) {
      alert('ProszÄ™ podaÄ‡ informacje o marce');
      return;
    }

    const loadingSection = document.getElementById('loadingSection');
    const previewSection = document.getElementById('previewSection');
    const progressBar = document.getElementById('progressBar');
    const loadingStatus = document.getElementById('loadingStatus');

    // Show loading
    loadingSection.classList.remove('hidden');
    previewSection.classList.add('hidden');

    // Get selected options
    const options = {
      includeEmojis: document.getElementById('includeEmojis').checked,
      includeCTA: document.getElementById('includeCTA').checked,
      seoOptimized: document.getElementById('seoOptimized').checked,
      multiLanguage: document.getElementById('multiLanguage').checked,
      abTestVariants: document.getElementById('abTestVariants').checked,
      competitorAnalysis: document.getElementById('competitorAnalysis').checked
    };

    // Get selected models
    const models = [];
    if (document.getElementById('modelGPT4').checked) models.push('gpt-4');
    if (document.getElementById('modelClaude').checked) models.push('claude-3');
    if (document.getElementById('modelGemini').checked) models.push('gemini-pro');
    if (document.getElementById('modelBielik').checked) models.push('bielik');

    // Simulate AI processing
    const loadingMessages = [
      'Analizowanie marki i grupy docelowej...',
      'Badanie konkurencji i trendĂłw...',
      'Generowanie treĹ›ci przez GPT-4...',
      'Optymalizacja przez Claude 3...',
      'Dodawanie elementĂłw SEO...',
      'Tworzenie wariantĂłw A/B...',
      'Analiza wydajnoĹ›ci...',
      'Finalizowanie treĹ›ci...'
    ];

    let messageIndex = 0;
    let progress = 0;

    const updateProgress = () => {
      if (messageIndex < loadingMessages.length) {
        loadingStatus.textContent = loadingMessages[messageIndex];
        progress = ((messageIndex + 1) / loadingMessages.length) * 100;
        progressBar.style.width = progress + '%';
        messageIndex++;
        
        setTimeout(updateProgress, 1000 + Math.random() * 1000);
      } else {
        // Show generated content
        displayGeneratedContent();
      }
    };

    updateProgress();
  }

